<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/backgroup_2"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="54dp">
        <ImageView
            android:id="@+id/imgAvt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_18"/>
        <TextView
            app:layout_constraintLeft_toRightOf="@id/imgAvt"
            app:layout_constraintTop_toTopOf="@id/imgAvt"
            app:layout_constraintBottom_toBottomOf="@id/imgAvt"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Nguyễn Thanh Toàn"
            android:textColor="#C2D5D3"/>
        
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_16"
            app:layout_constraintTop_toTopOf="@id/imgAvt"
            app:layout_constraintBottom_toBottomOf="@id/imgAvt"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="20dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <LinearLayout
        android:layout_margin="10dp"
        android:id="@+id/layout_fast"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_15"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/textView18"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:text="Chuyển tiền"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="13dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_qr"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:text="Nhận tiền"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="13dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_19"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:text="Rút tiền"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="13dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_20"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:text="Liên kết thẻ"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="13dp"/>
        </LinearLayout>
        
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/layout_card"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintTop_toBottomOf="@id/layout_fast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="15dp"
                android:paddingTop="10dp"
                android:textSize="13dp"
                android:id="@+id/tv_tk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tài khoản ViettelPay"/>

            <TextView
                android:id="@+id/sodu"
                app:layout_constraintTop_toBottomOf="@+id/tv_tk"
                android:layout_marginLeft="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem số dư"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="26dp"
                android:layout_height="32dp"
                android:src="@drawable/icon_21"
                app:layout_constraintLeft_toRightOf="@id/sodu"
                app:layout_constraintTop_toTopOf="@id/sodu"
                app:layout_constraintBottom_toBottomOf="@id/sodu"
                android:layout_marginLeft="15dp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="37dp"
                android:src="@drawable/icon_39"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="15dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/layout_icon"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/layout_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/icon_home_size"
                    android:layout_height="@dimen/icon_home_size"
                    android:src="@drawable/icon_1"
                    android:padding="@dimen/icon_home_padding"
                    android:background="@drawable/icon_border"/>
                <TextView
                    android:layout_width="98dp"
                    android:layout_height="35dp"
                    android:gravity="center_horizontal"
                    android:text="Chuyển tiền đến số TK"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="13dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/icon_home_size"
                    android:layout_height="@dimen/icon_home_size"
                    android:src="@drawable/icon2"
                    android:padding="@dimen/icon_home_padding"
                    android:background="@drawable/icon_border"/>
                <TextView
                    android:layout_width="98dp"
                    android:layout_height="35dp"
                    android:gravity="center_horizontal"
                    android:text="Chuyển tiền đến số ĐT"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="13dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/icon_home_size"
                    android:layout_height="@dimen/icon_home_size"
                    android:src="@drawable/icon_3"
                    android:padding="@dimen/icon_home_padding"
                    android:background="@drawable/icon_border"/>
                <TextView
                    android:layout_width="98dp"
                    android:layout_height="35dp"
                    android:gravity="center_horizontal"
                    android:text="Nạp ĐT"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="13dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/icon_home_size"
                    android:layout_height="@dimen/icon_home_size"
                    android:src="@drawable/icon_4"
                    android:padding="@dimen/icon_home_padding"
                    android:background="@drawable/icon_border"/>
                <TextView
                    android:layout_width="98dp"
                    android:layout_height="35dp"
                    android:gravity="center_horizontal"
                    android:text="Đặt vé Vietlott Mobilott"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="13dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/icon_home_size"
                    android:layout_height="@dimen/icon_home_size"
                    android:src="@drawable/icon_5"
                    android:padding="@dimen/icon_home_padding"
                    android:background="@drawable/icon_border"/>
                <TextView
                    android:layout_width="98dp"
                    android:layout_height="35dp"
                    android:gravity="center_horizontal"
                    android:text="Vé xem phim"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="13dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/icon_home_size"
                    android:layout_height="@dimen/icon_home_size"
                    android:src="@drawable/icon_6"
                    android:padding="@dimen/icon_home_padding"
                    android:background="@drawable/icon_border"/>
                <TextView
                    android:layout_width="98dp"
                    android:layout_height="35dp"
                    android:gravity="center_horizontal"
                    android:text="Tiền điện"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="13dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/icon_home_size"
                    android:layout_height="@dimen/icon_home_size"
                    android:src="@drawable/icon_7"
                    android:padding="@dimen/icon_home_padding"
                    android:background="@drawable/icon_border"/>
                <TextView
                    android:layout_width="98dp"
                    android:layout_height="35dp"
                    android:gravity="center_horizontal"
                    android:text="Tiền lòng nhân ái"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="13dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/icon_home_size"
                    android:layout_height="@dimen/icon_home_size"
                    android:src="@drawable/icon_8"
                    android:padding="@dimen/icon_home_padding"
                    android:background="@drawable/icon_border"/>
                <TextView
                    android:layout_width="98dp"
                    android:layout_height="35dp"
                    android:gravity="center_horizontal"
                    android:text="Thanh toán khoản vay"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="13dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/icon_home_size"
                    android:layout_height="@dimen/icon_home_size"
                    android:src="@drawable/icon_10"
                    android:padding="@dimen/icon_home_padding"
                    android:background="@drawable/icon_border"/>
                <TextView
                    android:layout_width="98dp"
                    android:layout_height="35dp"
                    android:gravity="center_horizontal"
                    android:text="Vay tiền"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="13dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/icon_home_size"
                    android:layout_height="@dimen/icon_home_size"
                    android:src="@drawable/icon_12"
                    android:padding="@dimen/icon_home_padding"
                    android:background="@drawable/icon_border"/>
                <TextView
                    android:layout_width="98dp"
                    android:layout_height="35dp"
                    android:gravity="center_horizontal"
                    android:text="Gửi tiết kiệm"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="13dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/icon_home_size"
                    android:layout_height="@dimen/icon_home_size"
                    android:src="@drawable/icon_35"
                    android:padding="@dimen/icon_home_padding"
                    android:background="@drawable/icon_border"/>
                <TextView
                    android:layout_width="98dp"
                    android:layout_height="35dp"
                    android:gravity="center_horizontal"
                    android:text="Dịch vụ Viet"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="13dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/icon_home_size"
                    android:layout_height="@dimen/icon_home_size"
                    android:src="@drawable/icon_13"
                    android:padding="@dimen/icon_home_padding"
                    android:background="@drawable/icon_border"/>
                <TextView
                    android:layout_width="98dp"
                    android:layout_height="35dp"
                    android:gravity="center_horizontal"
                    android:text="Xem thêm"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="13dp"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>