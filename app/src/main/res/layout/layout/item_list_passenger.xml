<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="15dp" android:layout_marginRight="5dp" android:layout_marginBottom="10dp" app:cardCornerRadius="7dp" app:cardElevation="1.5dp">
    <LinearLayout android:orientation="vertical" android:background="@color/md_white_1000" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:id="@+id/ll_header_info" android:paddingLeft="@dimen/margin_large" android:paddingRight="@dimen/margin_large" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="5dp">
            <LinearLayout android:orientation="vertical" android:paddingTop="@dimen/margin_large" android:paddingBottom="@dimen/margin_large" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <TextView android:textSize="@dimen/text_size_sub" android:textColor="#000000" android:id="@+id/tv_title_name" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:textSize="14sp" android:textColor="@color/colorGrey" android:id="@+id/tv_cmnd_date" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp"/>
                <TextView android:textSize="14sp" android:textColor="@color/colorGrey" android:id="@+id/tv_seat" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp"/>
                <TextView android:textSize="14sp" android:textColor="@color/colorGrey" android:id="@+id/tv_seat2" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp"/>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="@dimen/text_size_sub" android:layout_gravity="center" android:id="@+id/tv_expand_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Nhập thông tin"/>
                <ImageView android:layout_gravity="center" android:id="@+id/iv_expand" android:layout_width="wrap_content" android:layout_height="wrap_content" app:srcCompat="@drawable/ic_expand_less_black_24dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/ll_hidden_info" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="@dimen/layout_margin">
            <View android:background="@color/md_grey_300" android:layout_width="match_parent" android:layout_height="1dp"/>
            <com.bplus.vtpay.util.materialedittext.MaterialEditText android:textSize="@dimen/text_size_normal" android:id="@+id/edt_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginTop="@dimen/margin_large" android:layout_marginRight="@dimen/layout_margin" android:hint="@string/rails_enter_name" android:maxLength="50" android:inputType="textCapCharacters" android:imeOptions="actionNext" android:textAllCaps="true" app:met_clearButton="true" app:met_floatingLabel="2"/>
            <CheckBox android:id="@+id/checkbox_1014" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginTop="@dimen/margin_large" android:layout_marginRight="@dimen/layout_margin" android:text="@string/rails_1014"/>
            <com.bplus.vtpay.util.materialedittext.MaterialEditText android:textSize="@dimen/text_size_normal" android:id="@+id/edt_bill_code" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginTop="@dimen/margin_large" android:layout_marginRight="@dimen/layout_margin" android:hint="@string/rails_enter_cmnd" android:maxLength="20" android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM" app:met_clearButton="true" app:met_floatingLabel="2" app:met_primaryColor="@color/tokenDark100" style="@style/edit_text_identity_style"/>
            <RelativeLayout android:id="@+id/rl_birthday" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginTop="@dimen/margin_large" android:layout_marginRight="@dimen/layout_margin">
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                    <com.bplus.vtpay.util.materialedittext.MaterialEditText android:textSize="@dimen/text_size_normal" android:textStyle="normal" android:id="@+id/edt_from_date" android:paddingRight="24dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/rails_enter_birthday" android:singleLine="true" android:editable="false" android:inputType="text" app:met_clearButton="true" app:met_floatingLabel="2" app:met_primaryColor="@color/tokenDark100"/>
                    <com.mikepenz.iconics.view.IconicsImageView android:id="@+id/iconicsImageView" android:layout_width="@dimen/icon_size_small" android:layout_height="@dimen/icon_size_small" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:iiv_color="@color/md_grey_600" app:iiv_icon="@string/gmd_date_range"/>
                    <View android:textSize="@dimen/text_size_normal" android:id="@+id/btn_select_from_date" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignTop="@+id/iconicsImageView" android:layout_alignBottom="@+id/edt_from_date"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout android:background="@color/md_white_1000" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginTop="@dimen/margin_large" android:layout_marginRight="@dimen/layout_margin">
                <Spinner android:id="@+id/spinner_package_seat" android:background="@null" android:clickable="false" android:layout_width="match_parent" android:layout_height="0dp"/>
                <com.bplus.vtpay.util.materialedittext.MaterialEditText android:textSize="@dimen/text_size_normal" android:id="@+id/edt_seat" android:paddingRight="24dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Chỗ lượt đi" android:editable="false" android:layout_centerVertical="true" app:met_floatingLabel="2" app:met_primaryColor="@color/tokenDark100"/>
                <ImageView android:id="@+id/iv_expand_seat" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:srcCompat="@drawable/ic_expand_more_black_24dp"/>
                <TextView android:textSize="12sp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="24dp" android:text="Chọn chỗ" android:layout_toLeftOf="@+id/iv_expand_seat" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                <View android:id="@+id/package_seat_click_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignBottom="@+id/edt_seat" android:layout_alignParentTop="true"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/rl_back_seat" android:background="@color/md_white_1000" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginTop="@dimen/margin_large" android:layout_marginRight="@dimen/layout_margin">
                <Spinner android:id="@+id/spinner_package_seat2" android:background="@null" android:clickable="false" android:layout_width="match_parent" android:layout_height="0dp"/>
                <com.bplus.vtpay.util.materialedittext.MaterialEditText android:textSize="@dimen/text_size_normal" android:id="@+id/edt_seat2" android:paddingRight="24dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Chỗ lượt về" android:editable="false" android:layout_centerVertical="true" app:met_floatingLabel="2" app:met_primaryColor="@color/tokenDark100"/>
                <ImageView android:id="@+id/iv_expand_seat2" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:srcCompat="@drawable/ic_expand_more_black_24dp"/>
                <TextView android:textSize="12sp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="24dp" android:text="Chọn Chỗ" android:layout_toLeftOf="@+id/iv_expand_seat2" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                <View android:id="@+id/package_seat_click_layout2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignBottom="@+id/edt_seat2" android:layout_alignParentTop="true"/>
            </RelativeLayout>
            <RelativeLayout android:background="@color/md_white_1000" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginTop="@dimen/margin_large" android:layout_marginRight="@dimen/layout_margin">
                <Spinner android:id="@+id/spinner_package_promotion" android:background="@null" android:clickable="false" android:layout_width="match_parent" android:layout_height="0dp"/>
                <com.bplus.vtpay.util.materialedittext.MaterialEditText android:textSize="@dimen/text_size_normal" android:id="@+id/edt_promotion" android:paddingRight="24dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Chọn khuyến mãi" android:editable="false" android:layout_centerVertical="true" app:met_floatingLabel="2" app:met_primaryColor="@color/tokenDark100"/>
                <ImageView android:id="@+id/iv_expand_pro" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:srcCompat="@drawable/ic_expand_more_black_24dp"/>
                <TextView android:textSize="12sp" android:id="@+id/txt_edit_pro" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="24dp" android:text="Chỉnh sửa" android:layout_toLeftOf="@+id/iv_expand_pro" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                <View android:id="@+id/package_promotion_click_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignBottom="@+id/edt_promotion" android:layout_alignParentTop="true"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
