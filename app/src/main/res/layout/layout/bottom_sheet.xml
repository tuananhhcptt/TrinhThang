<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/bottom_sheet_filter" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" app:behavior_hideable="true" app:behavior_peekHeight="80dp" app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
    <ImageView android:layout_gravity="center" android:layout_width="50dp" android:layout_height="3dp" android:layout_marginBottom="5dp" android:src="@drawable/border_edt"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/dialog_main_container" android:background="@drawable/bg_white_top_radius_10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/rl_filter" android:background="@drawable/white_color_background_rounded_corner_top" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/iv_close_filter" android:padding="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" app:srcCompat="@drawable/ic_close_black"/>
            <TextView android:textSize="16sp" android:textColor="#263d60" android:gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Bộ lọc" android:layout_centerInParent="true" android:letterSpacing="-0.03"/>
        </RelativeLayout>
        <View android:background="#e3e3e3" android:layout_width="match_parent" android:layout_height="1dp"/>
        <RelativeLayout android:id="@+id/rl_filter_default" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="16sp" android:textColor="#263d60" android:padding="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tất cả"/>
            <ImageView android:id="@+id/iv_tick_filter_default" android:padding="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:srcCompat="@drawable/ic_tick_green"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rl_filter_pending" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="16sp" android:textColor="#263d60" android:padding="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Đang chờ" android:letterSpacing="-0.03"/>
            <ImageView android:id="@+id/iv_tick_filter_pending" android:padding="16dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:srcCompat="@drawable/ic_tick_green"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rl_filter_success" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="16sp" android:textColor="#263d60" android:padding="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Đã thanh toán" android:letterSpacing="-0.03"/>
            <ImageView android:id="@+id/iv_tick_filter_success" android:padding="16dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:srcCompat="@drawable/ic_tick_green"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rl_filter_failed" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="16sp" android:textColor="#263d60" android:padding="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Đã từ chối" android:letterSpacing="-0.03"/>
            <ImageView android:id="@+id/iv_tick_filter_failed" android:padding="16dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:srcCompat="@drawable/ic_tick_green"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
