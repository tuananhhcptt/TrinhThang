<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/lnl_item_fee" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:padding="@dimen/layout_margin_small" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
            <ImageView android:id="@+id/img_chosse" android:layout_width="@dimen/icon_size_big" android:layout_height="@dimen/icon_size_big" android:src="0x7f080715"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="3">
            <TextView android:textSize="@dimen/text_size_normal" android:textStyle="bold" android:id="@+id/txt_fee_name" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <TextView android:textSize="@dimen/text_size_sub" android:id="@+id/txt_fee_detain" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp"/>
            <TextView android:textSize="@dimen/text_size_normal" android:textStyle="bold" android:id="@+id/txt_money" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp"/>
        </LinearLayout>
        <TextView android:textSize="@dimen/text_size_normal" android:textColor="@color/colorPrimary" android:gravity="right" android:id="@+id/txt_pay_time" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2"/>
    </LinearLayout>
    <View android:background="@color/md_grey_300" android:layout_width="match_parent" android:layout_height="1dp"/>
</LinearLayout>
