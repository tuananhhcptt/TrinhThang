<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/text_size_title" android:textColor="#000000" android:id="@+id/txt_toa_title" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="6"/>
        <TextView android:textSize="@dimen/text_size_title" android:gravity="right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Toa" android:layout_weight="1"/>
        <TextView android:textColor="@android:color/white" android:gravity="center" android:id="@+id/txt_toa_count" android:background="@drawable/drawable_bg_fillter_4" android:layout_width="25dp" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_weight="1"/>
    </LinearLayout>
    <View android:id="@+id/line_bottom" android:background="#e0e0e0" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="4dp"/>
</LinearLayout>
