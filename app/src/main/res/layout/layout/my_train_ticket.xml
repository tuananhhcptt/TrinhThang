<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="#ffffff" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/train_ticket_rcv" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/rl_not_result" android:visibility="gone" android:layout_width="match_parent" android:layout_height="800dp">
        <ImageView android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="70dp" android:src="0x7f080795"/>
        <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="@color/colorBlackTrans85" android:gravity="center" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="41dp" android:text="Không tìm thấy vé"/>
        <TextView android:textSize="14sp" android:textColor="@color/colorBlackTrans85" android:gravity="center" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="12dp" android:layout_marginRight="20dp" android:text="@string/msg_not_found_ticket"/>
        <Button android:textSize="14sp" android:textColor="#ee0033" android:layout_gravity="center" android:id="@+id/iv_close" android:background="@drawable/bg_border_trip" android:paddingLeft="30dp" android:paddingRight="30dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="37dp" android:text="@string/back" android:textAllCaps="false" android:stateListAnimator="@null"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/rl_ticket_empty" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="0x7f080631"/>
        <TextView android:textSize="20sp" android:textColor="@color/text_color_new" android:gravity="center" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="41dp" android:text="Chưa có vé tàu"/>
    </LinearLayout>
</FrameLayout>
