<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textColor="@android:color/black" android:ellipsize="end" android:id="@+id/tv_position" android:paddingTop="16dp" android:paddingBottom="16dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:lines="1" android:layout_weight="1"/>
    <TextView android:textColor="@android:color/black" android:ellipsize="end" android:id="@+id/tv_name" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:maxLines="2" android:layout_weight="4"/>
    <TextView android:textColor="@android:color/black" android:ellipsize="end" android:id="@+id/tv_current" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:lines="1" android:layout_weight="2"/>
    <TextView android:textColor="@android:color/black" android:gravity="center_vertical" android:id="@+id/tv_discount" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginRight="16dp" android:lines="1" android:layout_weight="2"/>
    <TextView android:textColor="@android:color/black" android:gravity="center_vertical" android:id="@+id/tv_apply_date" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginRight="16dp" android:lines="1" android:layout_weight="2.5"/>
    <TextView android:textColor="@android:color/black" android:gravity="center_vertical" android:id="@+id/tv_transaction" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginRight="16dp" android:lines="1" android:layout_weight="2"/>
    <TextView android:textColor="@android:color/black" android:gravity="center_vertical" android:id="@+id/tv_profit" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginRight="16dp" android:lines="1" android:layout_weight="2.5"/>
</LinearLayout>
