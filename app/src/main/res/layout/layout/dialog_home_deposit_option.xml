<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:layout_gravity="center" android:layout_width="50dp" android:layout_height="3dp" android:layout_marginBottom="5dp" android:src="@drawable/border_edt"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/main_container" android:background="@drawable/bg_white_top_radius_10dp" android:paddingTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/text_size_title" android:textStyle="bold" android:textColor="@color/new_text_color" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/amount" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Số tiền:"/>
        <TextView android:textSize="@dimen/text_size_normal" android:textColor="@color/new_text_color" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/address" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_large" android:layout_marginRight="@dimen/margin_large" android:text="Địa chỉ: 48 Quốc Tử Giám, Quốc Tử Giám, Đống Đa, Hà Nội"/>
        <TextView android:textSize="@dimen/text_size_normal" android:textColor="#b6b6b6" android:layout_gravity="center_horizontal" android:id="@+id/status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/layout_margin_normal" android:text="Trạng thái: Thành công"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/edit" android:background="@drawable/top_line_border" android:paddingLeft="@dimen/margin_large" android:paddingTop="@dimen/layout_margin_normal" android:paddingRight="@dimen/margin_large" android:paddingBottom="@dimen/layout_margin_normal" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" app:srcCompat="@drawable/ic_edit_vector"/>
            <TextView android:textColor="@color/text_color_new" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_large" android:text="Chỉnh sửa thông tin" android:layout_marginStart="@dimen/margin_large"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/cancel" android:background="@drawable/top_line_border" android:paddingLeft="@dimen/margin_large" android:paddingTop="@dimen/layout_margin_normal" android:paddingRight="@dimen/margin_large" android:paddingBottom="@dimen/layout_margin_normal" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" app:srcCompat="@drawable/ic_cancel_transaction_vector"/>
            <TextView android:textColor="@color/text_color_new" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_large" android:text="Hủy" android:layout_marginStart="@dimen/margin_large"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
