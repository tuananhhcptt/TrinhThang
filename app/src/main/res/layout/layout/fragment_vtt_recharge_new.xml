<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="#f7f8f8" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="5dp" android:layout_marginRight="5dp" android:layout_marginBottom="10dp" app:cardElevation="5dp" app:cardPreventCornerOverlap="true">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.bplus.vtpay.util.materialedittext.MaterialEditText android:id="@+id/edt_amount" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="@dimen/layout_margin" android:layout_marginRight="10dp" android:layout_marginBottom="5dp" android:hint="@string/hint_amount" android:imeOptions="actionDone" app:met_bottomTextSize="@dimen/text_size_sub" app:met_clearButton="true" app:met_floatingLabel="2" app:met_primaryColor="@color/tokenDark100" style="@style/edit_text_amount_style"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.core.widget.NestedScrollView android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true" android:overScrollMode="never">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:textSize="@dimen/text_size_title" android:textColor="@color/md_grey_500" android:id="@+id/tv_condition" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="Điều kiện nạp tiền: Tài khoản ngân hàng phải đăng ký Thanh toán qua Internet Banking"/>
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/list_bank" android:background="@drawable/bg_border_white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:overScrollMode="never" android:nestedScrollingEnabled="false"/>
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/list_other_bank" android:background="@drawable/bg_border_white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:overScrollMode="never" android:nestedScrollingEnabled="false"/>
            <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:layout_marginBottom="5dp" app:cardElevation="10dp" app:cardPreventCornerOverlap="true">
                <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="10dp">
                    <RelativeLayout android:id="@+id/btn_select_bank" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <ImageView android:id="@+id/select_bank_icon" android:layout_width="36dp" android:layout_height="36dp" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp" android:layout_centerVertical="true" android:layout_marginStart="20dp" android:layout_marginEnd="10dp" app:srcCompat="@drawable/icon_select_bank_vector"/>
                        <TextView android:textSize="@dimen/text_size_button" android:id="@+id/btn_select_bank_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Chọn ngân hàng khác" android:layout_toLeftOf="@+id/icon_arrow" android:layout_toRightOf="@+id/select_bank_icon" android:layout_centerVertical="true" android:layout_toStartOf="@+id/icon_arrow" android:layout_toEndOf="@+id/select_bank_icon"/>
                        <ImageView android:id="@+id/icon_arrow" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_alignParentEnd="true" app:srcCompat="@drawable/icon_arrow_vector"/>
                    </RelativeLayout>
                    <RelativeLayout android:id="@+id/btn_add_money_source" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/btn_select_bank">
                        <ImageView android:id="@+id/add_money_source_icon" android:layout_width="36dp" android:layout_height="36dp" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp" android:layout_centerVertical="true" android:layout_marginStart="20dp" android:layout_marginEnd="10dp" app:srcCompat="@drawable/icon_add_money_source_vector"/>
                        <TextView android:textSize="@dimen/text_size_button" android:id="@+id/add_money_source_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Thêm liên kết ngân hàng" android:layout_toLeftOf="@+id/add_money_source_arrow" android:layout_toRightOf="@+id/add_money_source_icon" android:layout_centerVertical="true" android:layout_toStartOf="@+id/add_money_source_arrow" android:layout_toEndOf="@+id/add_money_source_icon"/>
                        <ImageView android:id="@+id/add_money_source_arrow" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:layout_alignParentRight="true" android:layout_alignParentEnd="true" app:srcCompat="@drawable/icon_arrow_vector"/>
                    </RelativeLayout>
                    <RelativeLayout android:id="@+id/btn_deposit_at_home" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/btn_add_money_source">
                        <ImageView android:id="@+id/deposit_at_home_icon" android:layout_width="36dp" android:layout_height="36dp" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp" android:layout_centerVertical="true" android:layout_marginStart="20dp" android:layout_marginEnd="10dp" app:srcCompat="@drawable/icon_home_deposit_vector"/>
                        <TextView android:textSize="@dimen/text_size_button" android:id="@+id/deposit_at_home_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Nạp tiền mặt tại nhà" android:layout_toLeftOf="@+id/deposit_at_home_arrow" android:layout_toRightOf="@+id/deposit_at_home_icon" android:layout_centerVertical="true" android:layout_toStartOf="@+id/deposit_at_home_arrow" android:layout_toEndOf="@+id/deposit_at_home_icon"/>
                        <ImageView android:id="@+id/deposit_at_home_arrow" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:layout_alignParentRight="true" android:layout_alignParentEnd="true" app:srcCompat="@drawable/icon_arrow_vector"/>
                    </RelativeLayout>
                    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:layout_below="@+id/btn_deposit_at_home" android:layout_alignParentBottom="true">
                        <TextView android:textSize="@dimen/text_size_title" android:textColor="#3fbbbe" android:id="@+id/tv_find_viettel_store" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/find_viettel_store" android:layout_alignParentBottom="true"/>
                        <TextView android:textSize="@dimen/text_size_title" android:textColor="@color/md_grey_500" android:paddingBottom="25dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Quý khách có thể nộp tiền mặt vào ViettelPay tại hơn 30.000 cửa hàng trên toàn quốc." android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
