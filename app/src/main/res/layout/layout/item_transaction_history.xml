<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textColor="@android:color/black" android:ellipsize="end" android:id="@+id/tv_id" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:lines="1"/>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/lo1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toRightOf="@+id/tv_id">
        <TextView android:textColor="@android:color/black" android:id="@+id/tv_name" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:layout_weight="4"/>
        <TextView android:textColor="@color/md_green_500" android:gravity="center_vertical" android:id="@+id/tv_change" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="3"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_toRightOf="@+id/tv_id" android:layout_below="@+id/lo1">
        <TextView android:textColor="@android:color/black" android:ellipsize="end" android:id="@+id/tv_time" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:lines="1" android:layout_weight="4"/>
        <TextView android:textColor="@color/md_green_500" android:gravity="center_vertical" android:id="@+id/tv_response" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="3"/>
    </LinearLayout>
</RelativeLayout>
