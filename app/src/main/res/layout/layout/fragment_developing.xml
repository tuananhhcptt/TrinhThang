    <Button android:id="@+id/btn_back" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/layout_margin" android:text="Quay lại" android:layout_alignParentBottom="true" style="@style/button_gradient"/>
</RelativeLayout>
