<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/layout_parent" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/iv_lixi_card_select" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="center" android:layout_above="@+id/lo_text_fix"/>
    <RelativeLayout android:gravity="center_horizontal" android:id="@+id/lo_dynamic_card" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/lo_text_fix">
        <com.airbnb.lottie.LottieAnimationView android:id="@+id/lottie_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" app:lottie_autoPlay="true"/>
    </RelativeLayout>
    <LinearLayout android:gravity="right" android:orientation="vertical" android:id="@+id/lo_text_fix" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <TextView android:textSize="14dp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tv_phone_fix" android:paddingLeft="@dimen/layout_margin" android:paddingRight="@dimen/layout_margin" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="099999999"/>
        <TextView android:textSize="14dp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tv_amount_fix" android:paddingLeft="@dimen/layout_margin" android:paddingRight="@dimen/layout_margin" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Số tiền: 100.000đ"/>
        <TextView android:textSize="14dp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tv_content_fix" android:paddingLeft="@dimen/layout_margin" android:paddingRight="@dimen/layout_margin" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:text="Chúc mừng năm mới\10Chúc mừng năm mới" android:maxLines="2" android:minLines="2"/>
        <TextView android:textSize="@dimen/text_size_normal" android:textColor="@android:color/white" android:id="@+id/tv_view_more_fix" android:padding="5dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/layout_margin" android:layout_marginBottom="5dp" android:text="Xem thêm"/>
    </LinearLayout>
    <RelativeLayout android:orientation="vertical" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_alignParentBottom="true">
        <RelativeLayout android:id="@+id/lo_content" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <ImageView android:id="@+id/iv_footer_lixi_1" android:layout_width="match_parent" android:layout_height="wrap_content" android:scaleType="fitXY" android:adjustViewBounds="true" android:layout_centerHorizontal="true"/>
            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/lo_ava" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_margin_normal" android:layout_marginBottom="@dimen/margin_small">
                <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <ImageView android:id="@+id/iv_avatar_holder" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/_8sdp" android:src="@drawable/lucky_bg_avatar_holder" android:scaleType="fitXY" android:layout_centerHorizontal="true"/>
                    <com.bplus.vtpay.view.CircleImageView android:id="@+id/iv_avatar" android:padding="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_logo_vtpay_red_new" android:layout_alignLeft="@+id/iv_avatar_holder" android:layout_alignTop="@+id/iv_avatar_holder" android:layout_alignRight="@+id/iv_avatar_holder" android:layout_alignBottom="@+id/iv_avatar_holder" android:layout_centerHorizontal="true"/>
                </RelativeLayout>
                <TextView android:textSize="15dp" android:textColor="#ffed0e" android:id="@+id/tv_gift" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tặng bạn" android:layout_centerHorizontal="true"/>
                <TextView android:textSize="15dp" android:textColor="#ffed0e" android:id="@+id/tv_phone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_above="@+id/tv_gift" android:layout_centerHorizontal="true"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/lo_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/lo_ava" android:layout_alignBottom="@+id/iv_footer_lixi_1">
                <TextView android:textSize="20dp" android:textColor="#ffed0e" android:gravity="center" android:id="@+id/tv_amount" android:paddingLeft="@dimen/layout_margin" android:paddingRight="@dimen/layout_margin" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <ScrollView android:paddingBottom="@dimen/layout_margin_small" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
                    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView android:textSize="14dp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tv_content" android:paddingLeft="@dimen/layout_margin_small" android:paddingTop="5dp" android:paddingRight="@dimen/layout_margin_small" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="match_parent" android:maxLines="2" android:minLines="2"/>
                        <TextView android:textSize="14dp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tv_content_full" android:paddingLeft="@dimen/layout_margin_small" android:paddingTop="5dp" android:paddingRight="@dimen/layout_margin_small" android:paddingBottom="5dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:minLines="2"/>
                    </LinearLayout>
                </ScrollView>
                <TextView android:textSize="@dimen/text_size_normal" android:textColor="@android:color/white" android:layout_gravity="right" android:id="@+id/tv_view_more" android:paddingLeft="5dp" android:paddingTop="2dp" android:paddingRight="5dp" android:paddingBottom="2dp" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/layout_margin" android:layout_marginBottom="5dp" android:text="Xem thêm"/>
            </LinearLayout>
        </RelativeLayout>
        <ImageView android:id="@+id/iv_close" android:padding="10dp" android:layout_width="@dimen/icon_size_big" android:layout_height="@dimen/icon_size_big" android:layout_marginTop="@dimen/statusbar_height" android:src="0x7f0802ea" android:scaleType="fitXY" android:tint="#10000000" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
        <ImageView android:id="@+id/iv_select" android:padding="5dp" android:layout_width="@dimen/icon_size_big" android:layout_height="@dimen/icon_size_big" android:layout_marginTop="@dimen/statusbar_height" android:scaleType="fitXY" android:layout_alignParentTop="true" android:layout_alignParentRight="true" app:srcCompat="@drawable/ic_selected_vector"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/lo_text_fix">
        <LinearLayout android:orientation="vertical" android:id="@+id/lo_floating_button" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin_small" android:layout_marginRight="5dp" android:layout_above="@+id/iv_more">
            <com.bplus.vtpay.view.FloatingButonView android:id="@+id/fbt_resend" android:layout_width="wrap_content" android:layout_height="wrap_content" app:fbv_icon="0x7f0805d7" app:fbv_iconBgColor="#f68a1c" app:fbv_textColor="@android:color/white" app:fbv_title="Gửi lại" app:fbv_titleBgColor="#f68a1c"/>
            <com.bplus.vtpay.view.FloatingButonView android:id="@+id/fbt_forward" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_margin_small" app:fbv_icon="0x7f08050a" app:fbv_iconBgColor="#027244" app:fbv_textColor="@android:color/white" app:fbv_title="Chuyển tiếp" app:fbv_titleBgColor="#027244"/>
            <com.bplus.vtpay.view.FloatingButonView android:id="@+id/fbt_close" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_margin_small" app:fbv_icon="@drawable/ic_close_1" app:fbv_iconBgColor="#795548" app:fbv_textColor="@android:color/white" app:fbv_title="Đóng" app:fbv_titleBgColor="#795548"/>
        </LinearLayout>
        <ImageView android:id="@+id/iv_more" android:background="?attr/selectableItemBackgroundBorderless" android:padding="10dp" android:layout_width="@dimen/icon_size_big" android:layout_height="@dimen/icon_size_big" android:layout_marginTop="@dimen/layout_margin_normal" android:scaleType="fitXY" android:tint="@android:color/white" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" app:srcCompat="@drawable/ic_more_vector"/>
    </RelativeLayout>
    <ImageView android:id="@+id/btn_next_card" android:background="#10000000" android:padding="@dimen/_20sdp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="0x7f080817" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    <ImageView android:id="@+id/btn_prev_card" android:background="#10000000" android:padding="@dimen/_20sdp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="0x7f08082b" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
    <com.bplus.vtpay.view.GiftItemViewNewStyle android:id="@+id/iv_item_gift" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</RelativeLayout>
