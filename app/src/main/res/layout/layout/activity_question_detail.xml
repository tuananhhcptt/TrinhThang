        <WebView android:id="@+id/webview" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginRight="@dimen/layout_margin"/>
    </LinearLayout>
</LinearLayout>
