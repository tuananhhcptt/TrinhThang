<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:textSize="14sp" android:textColor="#b6b6b6" android:gravity="end" android:id="@+id/tv_date_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="21dp" android:text="" android:letterSpacing="-0.04"/>
            <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="#263d60" android:id="@+id/tv_money_sharing_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="@dimen/_7sdp" android:text="" android:layout_below="@+id/tv_date_time" android:letterSpacing="-0.04"/>
            <TextView android:textSize="16sp" android:textColor="#7e7f7f" android:id="@+id/tv_total_amount_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="4dp" android:text="Tổng tiền:" android:layout_below="@+id/tv_money_sharing_name" android:letterSpacing="-0.04"/>
            <TextView android:textSize="16sp" android:textColor="#263d60" android:id="@+id/tv_total_amount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_marginTop="4dp" android:text="" android:layout_toRightOf="@+id/tv_total_amount_text" android:layout_below="@+id/tv_money_sharing_name" android:letterSpacing="-0.04"/>
            <TextView android:textSize="16sp" android:textColor="#7e7f7f" android:id="@+id/tv_num_person_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="4dp" android:text="Số người:" android:layout_below="@+id/tv_total_amount_text" android:letterSpacing="-0.04"/>
            <TextView android:textSize="16sp" android:textColor="#263d60" android:id="@+id/tv_nmm_person" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_marginTop="4dp" android:text="" android:layout_toRightOf="@+id/tv_num_person_text" android:layout_below="@+id/tv_total_amount_text" android:letterSpacing="-0.04"/>
            <View android:id="@+id/break_line" android:background="#e3e3e3" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="@dimen/_10sdp" android:layout_marginTop="31dp" android:layout_marginRight="@dimen/_10sdp" android:layout_below="@+id/tv_num_person_text"/>
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_people_to_share" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:layout_below="@+id/break_line" app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            <TextView android:textSize="16sp" android:textColor="#7e7f7f" android:id="@+id/tv_money_sharing_reason_text" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="18dp" android:text="ẢNH HÓA ĐƠN" android:layout_below="@+id/rv_people_to_share" android:letterSpacing="-0.04"/>
            <FrameLayout android:id="@+id/money_sharing_reason" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="16dp" android:layout_below="@+id/tv_money_sharing_reason_text">
                <TextView android:textSize="14sp" android:textColor="#b6b6b6" android:textColorHint="#b6b6b6" android:gravity="top" android:id="@+id/tv_sharing_reason" android:background="@drawable/grey_color_background_rounded_corner" android:padding="12dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="150dp" android:hint="Lý do chia tiền"/>
                <androidx.recyclerview.widget.RecyclerView android:layout_gravity="bottom" android:orientation="horizontal" android:id="@+id/rv_photos" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:layout_marginBottom="20dp" app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            </FrameLayout>
            <TextView android:textSize="14sp" android:textColor="#b6b6b6" android:id="@+id/tv_creator_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="16dp" android:text="Người tạo:" android:layout_below="@+id/money_sharing_reason" android:letterSpacing="-0.04"/>
            <TextView android:textSize="14sp" android:textColor="#b6b6b6" android:id="@+id/tv_creator" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_marginTop="16dp" android:text="" android:layout_toRightOf="@+id/tv_creator_text" android:layout_below="@+id/money_sharing_reason" android:letterSpacing="-0.04"/>
            <TextView android:textSize="14sp" android:textColor="#b6b6b6" android:id="@+id/tv_transaction_status_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:text="Trạng thái:" android:layout_below="@+id/tv_creator_text" android:letterSpacing="-0.04"/>
            <TextView android:textSize="14sp" android:textColor="#ee0033" android:id="@+id/tv_transaction_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:text="" android:layout_toRightOf="@+id/tv_transaction_status_text" android:layout_below="@+id/tv_creator_text" android:letterSpacing="-0.04"/>
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/ll_confirm_transfer" android:paddingLeft="20dp" android:paddingRight="20dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="21dp" android:layout_below="@+id/tv_transaction_status">
                <TextView android:textColor="@android:color/white" android:id="@+id/tv_decline" android:background="@drawable/red_rectangle_rounded" android:paddingLeft="36dp" android:paddingTop="10dp" android:paddingRight="36dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Từ chối"/>
                <TextView android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tv_agree" android:background="@drawable/green_rectangle_rounded" android:paddingLeft="36dp" android:paddingTop="10dp" android:paddingRight="36dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="Đồng ý" android:layout_toRightOf="@+id/tv_decline"/>
            </LinearLayout>
            <View android:id="@+id/bottom_margin_space" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="86dp" android:layout_below="@+id/tv_transaction_status"/>
        </RelativeLayout>
    </ScrollView>
    <ImageView android:id="@+id/iv_trash_delete" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" app:srcCompat="@drawable/ic_delete_trash_delete"/>
</RelativeLayout>
