<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView android:background="#ffffff" android:layout_width="match_parent" android:layout_height="wrap_content" android:elevation="3dp" app:cardElevation="11dp">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="16dp" android:layout_marginRight="16dp">
                <TextView android:textSize="14sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Họ và tên" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
                <TextView android:textSize="14sp" android:textColor="#263d60" android:id="@+id/name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Lê Tuấn Hùng" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="16dp" android:layout_marginRight="16dp">
                <TextView android:textSize="14sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Số CMND" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
                <TextView android:textSize="14sp" android:textColor="#263d60" android:id="@+id/id_num" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="001097004320" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="16dp" android:layout_marginRight="16dp">
                <TextView android:textSize="14sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Ngày sinh" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
                <TextView android:textSize="14sp" android:textColor="#263d60" android:id="@+id/birthday" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="03/11/1997" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="16dp" android:layout_marginRight="16dp" android:layout_marginBottom="16dp">
                <TextView android:textSize="14sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Quan hệ với người được bảo hiểm" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
                <TextView android:textSize="14sp" android:textColor="#263d60" android:id="@+id/relationship" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Bản thân" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
