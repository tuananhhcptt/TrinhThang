<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="#ffffff" android:paddingTop="@dimen/layout_margin_small" android:paddingBottom="@dimen/layout_margin_small" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:paddingLeft="@dimen/layout_margin_normal" android:paddingRight="@dimen/layout_margin_normal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_margin_small">
        <TextView android:textSize="@dimen/text_size_sub" android:gravity="right" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Họ tên học sinh:" android:layout_weight="1"/>
        <TextView android:textColor="#000000" android:id="@+id/txt_name_student" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="36dp" android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:paddingLeft="@dimen/layout_margin_normal" android:paddingRight="@dimen/layout_margin_normal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_margin_small">
        <TextView android:textSize="@dimen/text_size_sub" android:gravity="right" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Lớp:" android:layout_weight="1"/>
        <TextView android:textColor="#000000" android:id="@+id/txt_class_student" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="36dp" android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:paddingLeft="@dimen/layout_margin_normal" android:paddingRight="@dimen/layout_margin_normal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_margin_small">
        <TextView android:textSize="@dimen/text_size_sub" android:gravity="right" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Trường:" android:layout_weight="1"/>
        <TextView android:textColor="#000000" android:id="@+id/txt_school_student" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="36dp" android:layout_weight="2"/>
    </LinearLayout>
    <View android:background="@color/md_grey_300" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="@dimen/layout_margin_small"/>
    <TextView android:textSize="@dimen/text_size_title" android:textColor="#000000" android:id="@+id/txt_fee_title" android:paddingLeft="@dimen/layout_margin_normal" android:paddingRight="@dimen/layout_margin_normal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_margin_small" android:text="Lựa chọn các khoản nộp"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <ScrollView android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="4">
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_fee" android:paddingLeft="@dimen/layout_margin_normal" android:paddingRight="@dimen/layout_margin_normal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="@dimen/layout_margin_small"/>
        </ScrollView>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="#f5f5f5" android:paddingLeft="@dimen/layout_margin_normal" android:paddingRight="@dimen/layout_margin_normal" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                <TextView android:textColor="#000000" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Tổng số tiềnđ"/>
                <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#000000" android:gravity="center" android:id="@+id/txt_sum_money" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </LinearLayout>
            <Button android:textColor="@color/colorWhite" android:id="@+id/btn_finish" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="0dp" android:layout_marginRight="0dp" android:baselineAligned="false" android:text="Thanh toán" android:layout_weight="1" style="@style/button_gradient"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
