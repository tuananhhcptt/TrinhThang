<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/text_size_sub" android:textStyle="normal" android:textColor="@android:color/white" android:gravity="center_vertical" android:id="@+id/tv_alert" android:background="@color/md_green_500" android:paddingLeft="@dimen/layout_margin" android:paddingTop="@dimen/layout_padding" android:paddingRight="@dimen/layout_margin" android:paddingBottom="@dimen/layout_padding" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/rcv_info" android:paddingLeft="@dimen/layout_margin" android:paddingTop="@dimen/layout_padding" android:paddingRight="@dimen/layout_margin" android:paddingBottom="@dimen/layout_padding" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/lo_content" android:paddingLeft="@dimen/layout_margin" android:paddingRight="@dimen/layout_margin" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/text_size_sub" android:textColor="@color/md_grey_500" android:ellipsize="end" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Nội dung" android:maxLines="1"/>
            <TextView android:textSize="@dimen/text_size_normal" android:textColor="@android:color/black" android:id="@+id/tv_content" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/lo_address" android:paddingLeft="@dimen/layout_margin" android:paddingRight="@dimen/layout_margin" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/text_size_sub" android:textColor="@color/md_grey_500" android:ellipsize="end" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Địa chỉ" android:maxLines="1"/>
            <TextView android:textSize="@dimen/text_size_normal" android:textColor="@android:color/black" android:id="@+id/tv_address" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
