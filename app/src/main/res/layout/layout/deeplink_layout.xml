<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/colorWhite" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/layout_header" android:background="@drawable/color_gradient_new" android:layout_width="match_parent" android:layout_height="@dimen/actionbar_height">
        <ImageView android:id="@+id/btn_close" android:background="?attr/selectableItemBackgroundBorderless" android:layout_width="@dimen/icon_size_normal" android:layout_height="@dimen/icon_size_normal" android:layout_marginLeft="@dimen/layout_margin_small" android:layout_marginRight="@dimen/layout_margin_small" android:layout_centerVertical="true" app:srcCompat="@drawable/ic_navigate_before_white"/>
        <TextView android:textAppearance="@style/Toolbar.TitleText" android:textSize="@dimen/text_size_header" android:textColor="@color/colorWhite" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/btn_close" android:layout_centerVertical="true"/>
        <View android:background="@color/md_grey_300" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView android:id="@+id/scroll_content" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/layout_header">
        <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:paddingLeft="12dp" android:paddingTop="12dp" android:paddingRight="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ImageView android:id="@+id/iv_provider" android:layout_width="@dimen/iv_provider_width" android:layout_height="@dimen/iv_provider_height"/>
                    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="24dp">
                        <TextView android:textSize="@dimen/text_size_title" android:textColor="@color/md_grey_500" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Đơn vị phát hành" android:includeFontPadding="false"/>
                        <TextView android:textSize="@dimen/text_size_provider" android:textColor="@android:color/black" android:ellipsize="end" android:id="@+id/tv_provider_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_provider_padding_top" android:maxLines="2" android:includeFontPadding="false"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:id="@+id/lo_bill_code" android:background="@color/md_white_1000" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_margin">
                    <TextView android:textSize="0x7f070537" android:textColor="@color/md_grey_600" android:ellipsize="end" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_provider_padding_top" android:text="Tên đơn hàng" android:maxLines="2" android:includeFontPadding="false"/>
                    <TextView android:textSize="@dimen/text_size_edittext" android:textColor="@android:color/black" android:ellipsize="end" android:id="@+id/bill_name" android:paddingTop="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_provider_padding_top" android:maxLines="2" android:includeFontPadding="false"/>
                    <TextView android:textSize="0x7f070537" android:textColor="@color/md_grey_600" android:ellipsize="end" android:paddingTop="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_provider_padding_top" android:text="Nội dung đơn hàng" android:maxLines="2" android:includeFontPadding="false"/>
                    <TextView android:textSize="@dimen/text_size_edittext" android:textColor="@android:color/black" android:ellipsize="end" android:id="@+id/bill_content" android:paddingTop="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_provider_padding_top" android:maxLines="2" android:includeFontPadding="false"/>
                    <TextView android:textSize="0x7f070537" android:textColor="@color/md_grey_600" android:ellipsize="end" android:paddingTop="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_provider_padding_top" android:text="Số tiền thanh toán" android:maxLines="2" android:includeFontPadding="false"/>
                    <TextView android:textSize="@dimen/text_size_edittext" android:textColor="@android:color/black" android:ellipsize="end" android:id="@+id/bill_amount" android:paddingTop="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_provider_padding_top" android:text="Viettel Digital Services" android:maxLines="2" android:includeFontPadding="false"/>
                    <Button android:id="@+id/btn_check" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="0dp" android:layout_marginTop="@dimen/layout_margin_small" android:layout_marginRight="0dp" android:text="THANH TOÁN" style="@style/button_gradient"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.core.widget.NestedScrollView>
    <FrameLayout android:id="@+id/fragment_container" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/layout_header"/>
</RelativeLayout>
