<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true" app:cardCornerRadius="10dp" app:cardPreventCornerOverlap="true">
        <LinearLayout android:orientation="vertical" android:id="@+id/back_card_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/layout_margin">
            <TextView android:textSize="24dp" android:textColor="#ee0033" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Xác nhận giao dịch"/>
            <com.bplus.vtpay.widget.FormItemViewVertical android:id="@+id/dialog_show_fee_napas_interest_fiv" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginRight="@dimen/layout_margin" app:form_label_text="Chiết khấu:" app:form_label_textColor="#b6b6b6" app:form_value_text="" app:form_value_textColor="#263d60" app:form_value_textSize="16"/>
            <com.bplus.vtpay.widget.FormItemViewVertical android:id="@+id/dialog_show_totalamount" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginTop="@dimen/layout_margin_small" android:layout_marginRight="@dimen/layout_margin" app:form_label_text="Số tiền thanh toán:" app:form_label_textColor="#b6b6b6" app:form_value_text="" app:form_value_textColor="#263d60" app:form_value_textSize="16"/>
            <com.bplus.vtpay.widget.FormItemViewVertical android:id="@+id/dialog_show_fee" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginTop="@dimen/layout_margin_small" android:layout_marginRight="@dimen/layout_margin" app:form_label_text="Phí:" app:form_label_textColor="#b6b6b6" app:form_value_text="" app:form_value_textColor="#263d60" app:form_value_textSize="16"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin_normal" android:layout_marginTop="@dimen/layout_margin_small" android:layout_marginRight="@dimen/layout_margin_normal">
                <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" app:cardBackgroundColor="#e2e8ed" app:cardCornerRadius="10dp" app:cardElevation="0dp" app:cardPreventCornerOverlap="true">
                    <RelativeLayout android:layout_width="match_parent" android:layout_height="50dp">
                        <View android:id="@+id/divider" android:background="#b6b6b6" android:layout_width="1dp" android:layout_height="25dp" android:layout_centerInParent="true"/>
                        <TextView android:textSize="14dp" android:textColor="#263d60" android:gravity="center" android:id="@+id/btn_cancel" android:layout_width="match_parent" android:layout_height="match_parent" android:text="HỦY" android:layout_toLeftOf="@+id/divider"/>
                        <TextView android:textSize="14dp" android:textColor="#ee0033" android:gravity="center" android:id="@+id/btn_continue" android:layout_width="match_parent" android:layout_height="match_parent" android:text="TIẾP TỤC" android:layout_toRightOf="@+id/divider"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
