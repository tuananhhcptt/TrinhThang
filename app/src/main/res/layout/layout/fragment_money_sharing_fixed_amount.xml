<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="#ffffff" android:padding="12dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="4dp" android:layout_marginRight="4dp">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/_10sdp" android:layout_marginBottom="@dimen/_10sdp">
        <LinearLayout android:gravity="left" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:textSize="16sp" android:textColor="#b6b6b6" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp" android:text="Tổng số tiền"/>
            <TextView android:textSize="24sp" android:textStyle="bold" android:textColor="#263d60" android:id="@+id/tv_sum_bill" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/start_amount"/>
        </LinearLayout>
        <View android:background="#e3e3e3" android:layout_width="1dp" android:layout_height="match_parent"/>
        <LinearLayout android:gravity="right" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:textSize="16sp" android:textColor="#b6b6b6" android:gravity="right" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp" android:text="Số tiền đã chia"/>
            <TextView android:textSize="24sp" android:textStyle="bold" android:textColor="#263d60" android:gravity="right" android:id="@+id/tv_sum_shared" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/start_amount"/>
        </LinearLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_list_people_money" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="14dp" android:layout_below="@+id/tv_amount"/>
</LinearLayout>
