<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/insiderLayout" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:id="@+id/parentOfInapp" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="0sp" android:layout_weight="1">
            <TextView android:id="@+id/closeBt" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:includeFontPadding="false" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
            <com.useinsider.insider.InsiderView android:id="@+id/htmlView" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_alignParentTop="true"/>
            <ScrollView android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/htmlView" android:layout_centerInParent="true">
                <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:gravity="center" android:id="@+id/headerTv" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                    <TextView android:gravity="center" android:id="@+id/bodyTv" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
