<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/lo_group_item" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/lo_info" android:background="?attr/selectableItemBackground" android:paddingTop="@dimen/layout_margin_small" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.bplus.vtpay.view.CircleImageView android:id="@+id/civ_contact" android:layout_width="@dimen/icon_size_big" android:layout_height="@dimen/icon_size_big" android:layout_marginLeft="@dimen/layout_margin_small" android:layout_marginTop="@dimen/layout_margin_small" android:layout_marginRight="@dimen/layout_margin_small" android:src="0x7f0804a5" android:layout_alignParentLeft="true" android:layout_centerVertical="true" app:civ_fill_color="@color/circle_blue_contact"/>
        <com.bplus.vtpay.view.CircleImageView android:id="@+id/iv_contact" android:padding="1px" android:layout_width="@dimen/icon_size_big" android:layout_height="@dimen/icon_size_big" android:layout_marginLeft="@dimen/layout_margin_small" android:layout_marginTop="@dimen/layout_margin_small" android:layout_marginRight="@dimen/layout_margin_small" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/iv_contact_mask" android:padding="5dp" android:visibility="gone" android:layout_width="@dimen/icon_size_big" android:layout_height="@dimen/icon_size_big" android:layout_marginLeft="@dimen/layout_margin_small" android:layout_marginTop="@dimen/layout_margin_small" android:layout_marginRight="@dimen/layout_margin_small" android:src="0x7f0806ed" android:scaleType="fitCenter" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="@dimen/text_size_normal" android:textStyle="bold" android:textColor="@color/colorWhite" android:gravity="center" android:id="@+id/tv_contact" android:padding="2dp" android:layout_width="@dimen/icon_size_big" android:layout_height="@dimen/icon_size_big" android:layout_marginLeft="@dimen/layout_margin_small" android:layout_marginTop="@dimen/layout_margin_small" android:layout_marginRight="@dimen/layout_margin_small" android:text="CT" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <CheckBox android:theme="@style/AppTheme.WhiteAccent" android:gravity="center" android:id="@+id/cb_contact" android:visibility="gone" android:layout_width="35dp" android:layout_height="@dimen/icon_size_normal" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:paddingRight="@dimen/layout_margin_small" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_margin_small" android:layout_toLeftOf="@+id/cb_contact" android:layout_toRightOf="@+id/civ_contact" android:layout_centerVertical="true">
            <TextView android:textSize="@dimen/text_size_normal" android:textStyle="bold" android:textColor="@android:color/white" android:id="@+id/text_contact_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="2dp" android:text="Contact Name"/>
            <TextView android:textSize="@dimen/text_size_normal" android:textStyle="normal" android:textColor="@color/md_grey_200" android:id="@+id/text_contact_phone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Phone" android:layout_below="@+id/text_contact_name"/>
        </LinearLayout>
        <TextView android:textSize="13sp" android:textStyle="normal" android:textColor="@color/md_orange_200" android:gravity="center" android:id="@+id/tv_bank_rg" android:padding="2dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin_small" android:layout_marginRight="@dimen/layout_margin_small" android:text="B+" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <View android:background="#642d8cb9" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="@dimen/layout_margin_small" android:layout_below="@+id/civ_contact"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/lo_action" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/lo_info">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/btn_trans_money" android:background="?attr/selectableItemBackground" android:paddingTop="8dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <View android:layout_width="@dimen/icon_size_normal" android:layout_height="1dp" android:layout_marginLeft="@dimen/layout_margin_small" android:layout_marginRight="@dimen/layout_margin_small"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/layout_margin_small" android:src="0x7f080327" android:tint="@color/md_grey_300"/>
            <TextView android:textSize="@dimen/text_size_normal" android:textStyle="normal" android:textColor="@color/md_grey_300" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Chuyển tiền"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/btn_telco_payment" android:background="?attr/selectableItemBackground" android:paddingTop="8dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/btn_trans_money">
            <View android:layout_width="@dimen/icon_size_normal" android:layout_height="1dp" android:layout_marginLeft="@dimen/layout_margin_small" android:layout_marginRight="@dimen/layout_margin_small"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/layout_margin_small" android:src="0x7f080324" android:tint="@color/md_grey_300"/>
            <TextView android:textSize="@dimen/text_size_normal" android:textStyle="normal" android:textColor="@color/md_grey_300" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Nạp tiền điện thoại"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/btn_share" android:background="?attr/selectableItemBackground" android:paddingTop="8dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/btn_telco_payment">
            <View android:layout_width="@dimen/icon_size_normal" android:layout_height="1dp" android:layout_marginLeft="@dimen/layout_margin_small" android:layout_marginRight="@dimen/layout_margin_small"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/layout_margin_small" android:src="0x7f080326" android:tint="@color/md_grey_300"/>
            <TextView android:textSize="@dimen/text_size_normal" android:textStyle="normal" android:textColor="@color/md_grey_300" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Mời sử dụng ViettelPay"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
