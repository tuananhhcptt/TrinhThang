<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/margin_large" android:minHeight="50dp">
        <TextView android:textSize="16sp" android:textColor="@color/colorBlackTrans85" android:id="@+id/tv_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="4dp" android:layout_toLeftOf="@+id/iv_checked"/>
        <ImageView android:id="@+id/iv_checked" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:src="0x7f08048c" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="13sp" android:id="@+id/tv_refund" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:layout_below="@+id/tv_name" android:layout_alignLeft="@+id/tv_name" android:layout_alignRight="@+id/tv_name"/>
    </RelativeLayout>
    <View android:background="#e0e0e0" android:visibility="gone" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="@dimen/margin_large" android:layout_marginRight="@dimen/margin_large"/>
</LinearLayout>
