<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@android:color/white" android:paddingBottom="@dimen/layout_margin_small" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:background="0x7f0807b5" android:layout_width="match_parent" android:layout_height="2dp"/>
    <androidx.core.widget.NestedScrollView android:background="@color/color_line" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="@dimen/text_size_title" android:textStyle="bold" android:textColor="@color/md_grey_600" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin_normal" android:layout_marginTop="@dimen/layout_margin_small" android:layout_marginRight="@dimen/layout_margin_normal" android:layout_marginBottom="@dimen/layout_margin_small" android:text="Thông tin giao dịch"/>
                    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rcv_info" android:paddingLeft="@dimen/layout_margin_normal" android:paddingTop="@dimen/layout_margin_small" android:paddingRight="@dimen/layout_margin_normal" android:paddingBottom="@dimen/layout_margin" android:layout_width="match_parent" android:layout_height="wrap_content" app:layoutManager="LinearLayoutManager"/>
                    <Button android:id="@+id/btn_send" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/layout_margin_normal" android:text="Thanh toán" style="@style/button_gradient"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView android:id="@+id/lo_auto_pay" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/line_height">
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <RelativeLayout android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin_normal" android:layout_marginTop="@dimen/layout_margin_normal" android:layout_marginRight="@dimen/layout_margin_normal" android:layout_marginBottom="@dimen/layout_margin_normal">
                        <com.bplus.vtpay.view.CircleImageView android:id="@+id/civ_date" android:layout_width="@dimen/icon_size_big" android:layout_height="@dimen/icon_size_big" android:layout_marginRight="@dimen/layout_margin_normal" android:src="@drawable/ic_logo_vtpay_red_new" app:civ_fill_color="@color/md_grey_500"/>
                        <TextView android:textSize="@dimen/text_size_normal" android:textStyle="bold" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tv_date" android:layout_width="wrap_content" android:layout_height="@dimen/icon_size_big" android:text="24/7" android:layout_alignLeft="@+id/civ_date" android:layout_alignRight="@+id/civ_date"/>
                        <Switch android:textSize="@dimen/text_size_normal" android:textColor="@android:color/black" android:gravity="center_vertical" android:id="@+id/sw_auto_pay" android:focusable="false" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tắt" android:layout_alignTop="@+id/civ_date" android:layout_alignBottom="@+id/civ_date" android:layout_alignParentRight="true"/>
                        <View android:id="@+id/v_click_switch" android:background="?attr/selectableItemBackgroundBorderless" android:focusable="false" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignLeft="@+id/sw_auto_pay" android:layout_alignTop="@+id/sw_auto_pay" android:layout_alignRight="@+id/sw_auto_pay" android:layout_alignBottom="@+id/sw_auto_pay" android:layout_centerVertical="true"/>
                        <TextView android:textSize="@dimen/text_size_normal" android:textColor="@android:color/black" android:gravity="center_vertical" android:id="@+id/tv_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="@dimen/layout_margin_small" android:text="Tự động thanh toán giao dịch này hàng tháng" android:layout_toLeftOf="@+id/sw_auto_pay" android:layout_toRightOf="@+id/civ_date" android:layout_alignTop="@+id/civ_date" android:layout_alignBottom="@+id/civ_date"/>
                        <TextView android:textSize="@dimen/text_size_normal" android:textColor="@android:color/black" android:id="@+id/tv_bank_auto_pay" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_margin_small" android:layout_marginRight="@dimen/layout_margin_small" android:text="@string/bank_auto_pay" android:layout_toRightOf="@+id/civ_date" android:layout_below="@+id/tv_title"/>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView android:background="@color/md_white_1000" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="1dp" android:text=""/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
