<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/panel" android:paddingTop="@dimen/statusbar_height" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/toolbar"/>
    <ScrollView android:id="@+id/scroll_view_content" android:background="@color/colorWhite" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:background="@color/md_grey_100" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/md_grey_700" android:paddingLeft="@dimen/layout_margin" android:paddingTop="@dimen/layout_margin_small" android:paddingRight="@dimen/layout_margin" android:paddingBottom="@dimen/layout_margin_small" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Thông tin thẻ"/>
            <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="match_parent">
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/margin_small">
                    <com.bplus.vtpay.util.materialedittext.MaterialEditText android:textStyle="normal" android:id="@+id/edt_card" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginTop="8dp" android:layout_marginRight="@dimen/layout_margin" android:hint="Số thẻ (MB/BMC)" android:singleLine="true" android:maxLength="19" android:inputType="number" app:met_bottomTextSize="@dimen/text_size_sub" app:met_clearButton="true" app:met_floatingLabel="2" style="@style/edit_text_card_style"/>
                    <TextView android:textSize="@dimen/text_size_sub" android:textColor="@color/md_grey_600" android:id="@+id/txt_money_sub" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginRight="@dimen/layout_margin" android:text="Hiện ViettelPay hỗ trợ thêm tài khoản thanh toán theo số thẻ và thẻ ViettelPay MasterCard"/>
                    <com.bplus.vtpay.util.materialedittext.MaterialEditText android:textStyle="normal" android:id="@+id/edt_identity" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginTop="8dp" android:layout_marginRight="@dimen/layout_margin" android:hint="CMND/Hộ chiếu chủ thẻ" android:singleLine="true" android:maxLength="20" app:met_bottomTextSize="@dimen/text_size_sub" app:met_clearButton="true" app:met_floatingLabel="2" style="@style/edit_text_identity_style"/>
                    <com.bplus.vtpay.util.materialedittext.MaterialEditText android:textStyle="normal" android:id="@+id/edt_pin_card" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginTop="8dp" android:layout_marginRight="@dimen/layout_margin" android:hint="Mật khẩu thẻ (4 - 6 số)" android:singleLine="true" android:maxLength="6" android:digits="1234567890" android:inputType="numberPassword" android:fontFamily="sans-serif" app:met_bottomTextSize="@dimen/text_size_sub" app:met_clearButton="true" app:met_floatingLabel="2" style="@style/edit_text_style"/>
                    <TextView android:textSize="@dimen/text_size_sub" android:textColor="@color/md_grey_600" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginRight="@dimen/layout_margin" android:text="@string/sub_pin_atm"/>
                    <com.bplus.vtpay.util.materialedittext.MaterialEditText android:textStyle="normal" android:id="@+id/edt_pin" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginTop="8dp" android:layout_marginRight="@dimen/layout_margin" android:hint="@string/hint_pin_bp" android:singleLine="true" android:maxLength="6" android:digits="1234567890" android:inputType="numberPassword" android:fontFamily="sans-serif" app:met_bottomTextSize="@dimen/text_size_sub" app:met_clearButton="true" app:met_floatingLabel="2" style="@style/edit_text_style"/>
                    <TextView android:id="@+id/tv_send" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/_10sdp" android:text="@string/link_atm" style="@style/button_gradient"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/line_height">
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/layout_margin">
                    <TextView android:textSize="@dimen/text_size_normal" android:textColor="@color/md_grey_600" android:id="@+id/tv_term" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginTop="8dp" android:layout_marginRight="@dimen/layout_margin" android:text="@string/note_term"/>
                    <TextView android:textSize="@dimen/text_size_normal" android:textColor="@color/md_grey_600" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginTop="8dp" android:layout_marginRight="@dimen/layout_margin" android:text="@string/note_security"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
