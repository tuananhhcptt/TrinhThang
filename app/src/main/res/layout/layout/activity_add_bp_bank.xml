<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/panel" android:paddingTop="@dimen/statusbar_height" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" app:cardElevation="3dp">
        <include layout="@layout/toolbar"/>
    </androidx.cardview.widget.CardView>
    <ScrollView android:background="@color/colorWhite" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/text_size_title" android:textStyle="bold" android:textColor="@color/md_grey_700" android:background="@color/md_grey_100" android:paddingLeft="@dimen/layout_margin" android:paddingTop="@dimen/layout_margin_small" android:paddingRight="@dimen/layout_margin" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Thông tin tài khoản ngân hàng"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin_normal" android:layout_marginRight="@dimen/layout_margin">
                <RelativeLayout android:layout_width="64dp" android:layout_height="64dp">
                    <ImageView android:layout_width="55dp" android:layout_height="55dp" android:src="@drawable/bg_circle" android:layout_centerInParent="true"/>
                    <ImageView android:id="@+id/iv_logo" android:padding="15dp" android:layout_width="64dp" android:layout_height="64dp" android:layout_centerInParent="true"/>
                </RelativeLayout>
                <TextView android:textSize="16sp" android:textColor="@color/colorPrimary" android:id="@+id/tv_name" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_small" android:layout_weight="1"/>
            </LinearLayout>
            <com.bplus.vtpay.util.materialedittext.MaterialEditText android:id="@+id/edt_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginTop="@dimen/layout_margin_small" android:layout_marginRight="@dimen/layout_margin" android:hint="Họ tên chủ TK (không dấu)" android:ems="10" android:singleLine="true" android:maxLength="35" android:digits=" qwertzuiopasdfghjklyxcvbnmQWERTZUIOPASDFGHJKLYXCVBNM" android:inputType="textCapWords" app:met_bottomTextSize="@dimen/text_size_sub" app:met_clearButton="true" app:met_floatingLabel="2" style="@style/edit_text_style"/>
            <RelativeLayout android:id="@+id/lo_birthday" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginTop="@dimen/layout_margin_small" android:layout_marginRight="@dimen/layout_margin">
                <com.bplus.vtpay.util.materialedittext.MaterialEditText android:id="@+id/edt_birthday" android:focusable="false" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Ngày/Tháng/Năm sinh" android:ems="10" android:singleLine="true" android:maxLength="35" android:digits="@string/digits_text" android:editable="false" android:inputType="none" app:met_bottomTextSize="@dimen/text_size_sub" app:met_clearButton="true" app:met_floatingLabel="2" style="@style/edit_text_style"/>
                <View android:id="@+id/btn_select_date" android:background="?attr/selectableItemBackground" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignTop="@+id/edt_birthday" android:layout_alignBottom="@+id/edt_birthday"/>
            </RelativeLayout>
            <com.bplus.vtpay.util.materialedittext.MaterialEditText android:id="@+id/edt_account" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginTop="@dimen/layout_margin_small" android:layout_marginRight="@dimen/layout_margin" android:hint="Số tài khoản" android:ems="10" android:singleLine="true" android:maxLength="35" android:digits="@string/digits_text" android:inputType="text" app:met_bottomTextSize="@dimen/text_size_sub" app:met_clearButton="true" app:met_floatingLabel="2" style="@style/edit_text_style"/>
            <com.bplus.vtpay.util.materialedittext.MaterialEditText android:id="@+id/edt_identity" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginTop="@dimen/layout_margin_small" android:layout_marginRight="@dimen/layout_margin" android:hint="@string/hint_id_passport" android:ems="10" android:singleLine="true" android:maxLength="20" android:digits="@string/digits_text" android:inputType="text" app:met_bottomTextSize="@dimen/text_size_sub" app:met_clearButton="true" app:met_floatingLabel="2" style="@style/edit_text_style"/>
            <TextView android:textSize="@dimen/text_size_sub" android:textColor="@color/md_grey_600" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginRight="@dimen/layout_margin" android:text="Số chứng minh/hộ chiếu của chủ tài khoản"/>
            <TextView android:id="@+id/tv_send" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_margin_normal" android:text="@string/add_account" style="@style/button_gradient"/>
            <TextView android:textSize="@dimen/text_size_sub" android:textColor="@color/md_grey_600" android:id="@+id/tv_note" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginTop="@dimen/layout_margin_small" android:layout_marginRight="@dimen/layout_margin" android:text="Chú ý: Bằng việc thêm tài khoản ngân hàng vào ViettelPay, bạn đồng ý với việc đăng ký sử dụng dịch vụ Bankplus tại ngân hàng BIDV. Phí duy trì dịch vụ 11.000đ/tháng"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
