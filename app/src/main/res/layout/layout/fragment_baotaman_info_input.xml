<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:id="@+id/lnl_lst_packet" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/packet1" android:background="@drawable/drawble_boder_white" android:paddingLeft="1dp" android:paddingTop="8dp" android:paddingRight="1dp" android:paddingBottom="8dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_margin="2dp" android:layout_weight="1">
            <TextView android:textSize="16sp" android:textColor="@color/text_color_new" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Cơ bản"/>
            <TextView android:textSize="10sp" android:textColor="@color/color_red_EE0033" android:id="@+id/value_packet1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Quyền lợi 100 triệu đồng"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/packet2" android:background="@drawable/drawble_boder_gray" android:paddingLeft="1dp" android:paddingTop="8dp" android:paddingRight="1dp" android:paddingBottom="8dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_margin="2dp" android:layout_weight="1">
            <TextView android:textSize="16sp" android:textColor="@color/text_color_new" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tiêu chuẩn"/>
            <TextView android:textSize="10sp" android:textColor="@color/colorBlackTrans50" android:id="@+id/value_packet2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Quyền lợi 250 triệu đồng"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/packet3" android:background="@drawable/drawble_boder_gray" android:paddingLeft="1dp" android:paddingTop="8dp" android:paddingRight="1dp" android:paddingBottom="8dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_margin="2dp" android:layout_weight="1">
            <TextView android:textSize="16sp" android:textColor="@color/text_color_new" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Nâng cao"/>
            <TextView android:textSize="10sp" android:textColor="@color/colorBlackTrans50" android:id="@+id/value_packet3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Quyền lợi 500 triệu đồng"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:background="@android:color/white" android:padding="8dp" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textSize="@dimen/text_size_header" android:textColor="@color/text_color_new" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_small" android:text="Thông tin đăng ký"/>
        <com.bplus.vtpay.util.materialedittext.MaterialEditText android:id="@+id/edt_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="0x7f070430" android:hint="Họ và tên" android:maxLength="50" android:layout_centerVertical="true" android:inputType="text" android:imeOptions="actionDone" app:met_bottomTextSize="@dimen/text_size_sub" app:met_clearButton="true" app:met_floatingLabel="2" style="@style/edit_text_style_baotaman"/>
        <com.bplus.vtpay.util.materialedittext.MaterialEditText android:id="@+id/edt_date_birth" android:focusable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_small" android:hint="Ngày tháng năm sinh" android:maxLength="50" android:drawableRight="@drawable/ic_calendar_dsvn" android:layout_centerVertical="true" app:met_bottomTextSize="@dimen/text_size_sub" app:met_clearButton="true" app:met_floatingLabel="2" style="@style/edit_text_style"/>
        <com.bplus.vtpay.util.materialedittext.MaterialEditText android:id="@+id/edt_identify" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_small" android:hint="Số chứng minh thư nhân dân" android:maxLength="20" android:layout_centerVertical="true" android:inputType="text" android:imeOptions="actionDone" app:met_bottomTextSize="@dimen/text_size_sub" app:met_clearButton="true" app:met_floatingLabel="2" style="@style/edit_text_style_identify_baotaman"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.bplus.vtpay.util.materialedittext.MaterialEditText android:id="@+id/edt_sex_select" android:focusable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_small" android:hint="Giới tính" android:maxLength="50" android:layout_centerVertical="true" app:met_bottomTextSize="@dimen/text_size_sub" app:met_clearButton="true" app:met_floatingLabel="2" style="@style/edit_text_style"/>
            <Spinner android:gravity="center" android:layout_gravity="center" android:id="@+id/spiner_gender" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_small" android:textAlignment="center" style="@style/edit_text_style"/>
        </RelativeLayout>
        <com.bplus.vtpay.util.materialedittext.MaterialEditText android:id="@+id/edt_email" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_small" android:hint="Email" android:maxLength="50" android:layout_centerVertical="true" android:inputType="textEmailAddress" app:met_bottomTextSize="@dimen/text_size_sub" app:met_clearButton="true" app:met_floatingLabel="2" style="@style/edit_text_style"/>
        <Button android:id="@+id/btn_continue_page_two" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/_10sdp" android:layout_marginBottom="@dimen/_15sdp" android:text="Tiếp tục" style="@style/button_gradient"/>
    </LinearLayout>
</LinearLayout>
