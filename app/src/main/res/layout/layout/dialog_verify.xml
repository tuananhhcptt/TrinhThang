<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/layout_container" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/text_size_header" android:textStyle="bold" android:textColor="@color/md_grey_700" android:id="@+id/tv_tip_tricks_title_3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginTop="@dimen/layout_margin_normal" android:layout_marginRight="@dimen/layout_margin" android:layout_marginBottom="10dp" android:text="Xác minh thông tin!" android:lineSpacingExtra="3dp"/>
            <TextView android:textSize="@dimen/text_size_normal" android:textStyle="normal" android:textColor="@color/md_grey_900" android:id="@+id/tv_tip_tricks_desc_3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginRight="@dimen/layout_margin" android:layout_marginBottom="10dp" android:text="@string/label_verify_online" android:lineSpacingExtra="3dp"/>
            <LinearLayout android:orientation="horizontal" android:padding="@dimen/layout_margin" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RelativeLayout android:id="@+id/btn_select_identify" android:background="@drawable/bg_button_border" android:paddingLeft="@dimen/layout_margin_small" android:paddingTop="@dimen/layout_margin_small" android:paddingRight="@dimen/layout_margin_small" android:paddingBottom="@dimen/layout_margin_normal" android:layout_width="0dp" android:layout_height="wrap_content" android:foreground="?attr/selectableItemBackground" android:layout_weight="1">
                    <ImageView android:id="@+id/iv_identify" android:layout_width="@dimen/icon_size_normal" android:layout_height="@dimen/icon_size_normal" android:src="0x7f0807a2" android:tint="@color/viettel_color" android:layout_centerHorizontal="true"/>
                    <TextView android:textSize="@dimen/text_size_normal" android:textColor="@color/md_grey_800" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_margin_small" android:text="Xác minh bằng ảnh \10CMT/Hộ chiếu" android:layout_below="@+id/iv_identify" android:layout_centerHorizontal="true"/>
                </RelativeLayout>
                <RelativeLayout android:id="@+id/btn_select_viettel" android:background="@drawable/bg_button_border" android:paddingLeft="@dimen/layout_margin_small" android:paddingTop="@dimen/layout_margin_small" android:paddingRight="@dimen/layout_margin_small" android:paddingBottom="@dimen/layout_margin_normal" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:foreground="?attr/selectableItemBackground" android:layout_weight="1">
                    <ImageView android:id="@+id/iv_viettel" android:layout_width="@dimen/icon_size_normal" android:layout_height="@dimen/icon_size_normal" android:src="0x7f0807a3" android:tint="@color/viettel_color" android:layout_centerHorizontal="true"/>
                    <TextView android:textSize="@dimen/text_size_normal" android:textColor="@color/md_grey_800" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_margin_small" android:text="Xác minh tại quầy \10Viettel gần nhất" android:layout_below="@+id/iv_viettel" android:layout_centerHorizontal="true"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/layout_margin_normal">
        <TextView android:textSize="@dimen/text_size_button" android:textStyle="normal" android:textColor="@color/viettel_color" android:id="@+id/btn_cancel" android:background="?attr/selectableItemBackground" android:padding="@dimen/layout_margin_small" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="TÔI SẼ XÁC MINH SAU" android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>
