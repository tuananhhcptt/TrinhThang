<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="#f7f8f8" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:id="@+id/main_content" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/check_rate">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/new_text_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin_normal" android:layout_marginTop="@dimen/layout_margin_normal" android:text="Tài khoản tiết kiệm của bạn" android:fontFamily="@font/sf_protext_medium"/>
            <androidx.cardview.widget.CardView android:id="@+id/cv_choose_bank" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/layout_margin_normal" android:elevation="3dp" app:cardCornerRadius="3dp" app:cardElevation="11dp">
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="12sp" android:textColor="#b6b6b6" android:id="@+id/tv_bank" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin_normal" android:layout_marginTop="@dimen/layout_margin_normal" android:text="Chọn theo ngân hàng"/>
                    <TextView android:textColor="#263b60" android:id="@+id/tv_bank_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin_normal" android:layout_marginTop="3dp" android:layout_marginBottom="@dimen/layout_margin_normal" android:text="Chọn ngân hàng" android:layout_below="@+id/tv_bank"/>
                    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginRight="@dimen/layout_margin_normal" android:src="0x7f08058c" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <com.bplus.vtpay.view.recyclerviewpager.RecyclerViewPager android:id="@+id/rcv_list_account" android:paddingLeft="@dimen/_15sdp" android:paddingRight="@dimen/_15sdp" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_margin_small" android:nestedScrollingEnabled="true"/>
            <com.bplus.vtpay.view.recyclerviewpager.RecyclerViewPager android:id="@+id/rcv_list_account_sorted" android:paddingLeft="@dimen/_15sdp" android:paddingRight="@dimen/_15sdp" android:visibility="gone" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_margin_small" android:nestedScrollingEnabled="true"/>
            <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/new_text_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin_normal" android:layout_marginTop="@dimen/layout_margin_big" android:text="Mở tài khoản tiết kiệm khác" android:fontFamily="@font/sf_protext_medium"/>
            <TextView android:textColor="#ee0033" android:gravity="center" android:id="@+id/btn_open_account" android:clickable="true" android:layout_width="match_parent" android:layout_height="45dp" android:layout_margin="@dimen/layout_margin" android:text="Mở tài khoản tiết kiệm" android:fontFamily="@font/sf_protext_medium" style="@style/button_topaz_round_style"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout android:orientation="vertical" android:id="@+id/check_rate" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <View android:background="#e3e3e3" android:layout_width="match_parent" android:layout_height="0.5dp"/>
        <TextView android:textColor="#ee0033" android:layout_gravity="center" android:id="@+id/tv_check_rate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_margin_normal" android:layout_marginBottom="@dimen/layout_margin_normal" android:text="Tra cứu lãi suất" android:fontFamily="@font/sf_pro_text_regular"/>
    </LinearLayout>
</RelativeLayout>
