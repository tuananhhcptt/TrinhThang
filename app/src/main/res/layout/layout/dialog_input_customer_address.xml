<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/panel" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:background="@drawable/bg_dialog_white" android:padding="@dimen/padding_normal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/layout_margin_big" android:layout_centerInParent="true">
        <TextView android:textSize="24dp" android:textColor="@color/viettel_color" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Địa chỉ chi tiết"/>
        <TextView android:textColor="@color/text_color_new" android:gravity="center" android:id="@+id/content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_small" android:text="Vui lòng nhập địa chỉ chi tiết của Quý khách"/>
        <com.bplus.vtpay.util.materialedittext.MaterialEditText android:textSize="@dimen/_10sdp" android:id="@+id/edt_address" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginTop="@dimen/layout_margin" android:layout_marginRight="@dimen/layout_margin" android:hint="Nhập địa chỉ tại đây" android:maxLength="120" android:inputType="text" android:imeOptions="actionDone" app:met_bottomTextSize="@dimen/_8sdp" app:met_clearButton="true" app:met_primaryColor="@color/tokenDark100"/>
        <LinearLayout android:gravity="center" android:background="@drawable/bg_gray_new" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginTop="@dimen/layout_margin" android:layout_marginRight="@dimen/layout_margin" android:layout_marginBottom="@dimen/layout_margin_small">
            <TextView android:textSize="14dp" android:textColor="@color/text_color_new" android:gravity="center" android:id="@+id/cancel_btn" android:layout_width="0dp" android:layout_height="match_parent" android:text="HỦY" android:layout_weight="1"/>
            <View android:id="@+id/view_line" android:background="@color/colorWhite" android:layout_width="1dp" android:layout_height="match_parent" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"/>
            <TextView android:textSize="14dp" android:textColor="@color/viettel_color" android:gravity="center" android:id="@+id/confirm_btn" android:layout_width="0dp" android:layout_height="match_parent" android:text="XÁC NHẬN" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
