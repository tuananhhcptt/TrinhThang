<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@android:color/white" android:paddingLeft="@dimen/margin_large" android:paddingTop="@dimen/margin_small" android:paddingRight="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:foreground="?attr/selectableItemBackground" android:paddingStart="@dimen/margin_large" android:paddingEnd="5dp">
    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/main_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/option" android:layout_toStartOf="@+id/option">
        <TextView android:textSize="@dimen/text_size_title" android:textStyle="bold" android:textColor="@color/new_text_color" android:id="@+id/amount" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Số tiền:"/>
        <TextView android:textSize="@dimen/text_size_normal" android:textColor="@color/new_text_color" android:id="@+id/address" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Địa chỉ: 48 Quốc Tử Giám, Quốc Tử Giám, Đống Đa, Hà Nội"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_small">
            <TextView android:textSize="@dimen/text_size_normal" android:textColor="@color/md_grey_400" android:id="@+id/time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/margin_small" android:text="09:41, 12/06/2018"/>
            <TextView android:textSize="@dimen/text_size_normal" android:textColor="#ee0033" android:id="@+id/status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Thành công"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView android:id="@+id/option" android:paddingLeft="@dimen/margin_small" android:paddingTop="@dimen/margin_large" android:paddingBottom="@dimen/margin_large" android:layout_width="wrap_content" android:layout_height="wrap_content" android:tint="#263d60" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_alignParentEnd="true" app:srcCompat="@drawable/ic_option_vector"/>
    <View android:id="@+id/divider" android:background="@color/md_grey_400" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="@dimen/margin_small" android:layout_below="@+id/main_layout"/>
</RelativeLayout>
