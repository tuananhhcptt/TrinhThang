<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@android:color/white" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView android:background="@color/md_grey_100" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/toolbar">
        <LinearLayout android:orientation="vertical" android:background="@color/md_grey_100" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/text_size_title" android:textStyle="bold" android:textColor="@color/md_grey_600" android:gravity="center_vertical" android:id="@+id/tv_title_acc" android:paddingLeft="@dimen/layout_margin" android:paddingTop="@dimen/layout_margin_small" android:paddingRight="@dimen/layout_margin" android:paddingBottom="@dimen/layout_margin_small" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Tài khoản thanh toán"/>
            <androidx.cardview.widget.CardView android:id="@+id/lo_info_acc" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RelativeLayout android:paddingBottom="@dimen/layout_margin_small" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rcv_info_acc" android:paddingLeft="@dimen/layout_margin" android:paddingTop="@dimen/layout_margin_small" android:paddingRight="@dimen/layout_margin" android:paddingBottom="@dimen/layout_margin_small" android:layout_width="match_parent" android:layout_height="wrap_content" app:layoutManager="LinearLayoutManager"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <TextView android:textSize="@dimen/text_size_title" android:textStyle="bold" android:textColor="@color/md_grey_600" android:gravity="center_vertical" android:id="@+id/tv_title_recv_acc" android:paddingLeft="@dimen/layout_margin" android:paddingTop="@dimen/layout_margin_small" android:paddingRight="@dimen/layout_margin" android:paddingBottom="@dimen/layout_margin_small" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Tài khoản nhận"/>
            <androidx.cardview.widget.CardView android:id="@+id/lo_info_recv_acc" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RelativeLayout android:paddingBottom="@dimen/layout_margin_small" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rcv_info_recv_acc" android:paddingLeft="@dimen/layout_margin" android:paddingTop="@dimen/layout_margin_small" android:paddingRight="@dimen/layout_margin" android:paddingBottom="@dimen/layout_margin_small" android:layout_width="match_parent" android:layout_height="wrap_content" app:layoutManager="LinearLayoutManager"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <TextView android:textSize="@dimen/text_size_title" android:textStyle="bold" android:textColor="@color/md_grey_600" android:gravity="center_vertical" android:id="@+id/tv_title_2" android:paddingLeft="@dimen/layout_margin" android:paddingTop="@dimen/layout_margin_small" android:paddingRight="@dimen/layout_margin" android:paddingBottom="@dimen/layout_margin_small" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Thông tin giao dịch"/>
            <androidx.cardview.widget.CardView android:id="@+id/lo_info" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical" android:paddingBottom="@dimen/layout_margin" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rcv_info" android:background="@android:color/white" android:paddingLeft="@dimen/layout_margin" android:paddingTop="@dimen/layout_margin_small" android:paddingRight="@dimen/layout_margin" android:paddingBottom="@dimen/layout_margin" android:layout_width="match_parent" android:layout_height="wrap_content" app:layoutManager="LinearLayoutManager"/>
                    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/btn_del_history" android:background="@drawable/bg_white_with_border_new" android:padding="5dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginRight="@dimen/layout_margin" android:layout_marginBottom="@dimen/layout_margin_small">
                        <TextView android:textColor="@color/md_red_500" android:gravity="center" android:layout_width="match_parent" android:layout_height="@dimen/icon_size_normal" android:text="Xóa lịch sử giao dịch này" android:textAllCaps="false"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="horizontal" android:id="@+id/btn_save_mybuild" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/layout_margin_small" style="@style/button_gradient">
                        <ImageView android:padding="3dp" android:visibility="gone" android:layout_width="@dimen/icon_size_normal" android:layout_height="@dimen/icon_size_normal" android:src="0x7f0805ed"/>
                        <TextView android:textSize="@dimen/text_size_button" android:textStyle="bold" android:textColor="@android:color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Lưu mẫu" android:textAllCaps="true"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="horizontal" android:id="@+id/btn_save_auto_pay" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/layout_margin_small" style="@style/button_gradient">
                        <ImageView android:padding="3dp" android:visibility="gone" android:layout_width="@dimen/icon_size_normal" android:layout_height="@dimen/icon_size_normal" android:src="0x7f080436" android:tint="#ffffff"/>
                        <TextView android:textSize="@dimen/text_size_button" android:textStyle="bold" android:textColor="@android:color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Thanh toán tự động" android:textAllCaps="true"/>
                    </LinearLayout>
                    <TextView android:textSize="@dimen/text_size_normal" android:textColor="@color/text_color_new" android:id="@+id/alert" android:padding="@dimen/layout_margin" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                    <LinearLayout android:orientation="horizontal" android:id="@+id/btn_go_home" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/layout_margin_small" style="@style/button_gradient">
                        <ImageView android:padding="3dp" android:visibility="gone" android:layout_width="@dimen/icon_size_normal" android:layout_height="@dimen/icon_size_normal" android:src="0x7f080436" android:tint="#ffffff"/>
                        <TextView android:textSize="@dimen/text_size_button" android:textStyle="bold" android:textColor="@android:color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/go_home_screen" android:textAllCaps="true"/>
                    </LinearLayout>
                    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/btn_show_history" android:background="@drawable/bg_white_with_border_new" android:padding="5dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginRight="@dimen/layout_margin" android:layout_marginBottom="@dimen/layout_margin_small">
                        <TextView android:textColor="@color/new_text_color" android:gravity="center" android:layout_width="match_parent" android:layout_height="@dimen/icon_size_normal" android:text="Xem lịch sử giao dịch" android:textAllCaps="false"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
