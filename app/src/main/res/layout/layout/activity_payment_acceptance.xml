<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/layout_parrent" android:background="@color/colorWhite" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/layout_padding" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/transfer_button_send_height" android:layout_marginTop="5dp" android:layout_marginBottom="10dp" android:layout_alignParentBottom="true">
        <TextView android:id="@+id/tv_send_custom" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="THANH TOÁN" android:layout_centerInParent="true" style="@style/button_gradient"/>
    </RelativeLayout>
    <ScrollView android:id="@+id/scroll_content" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/layout_padding">
        <LinearLayout android:orientation="vertical" android:background="@color/md_grey_100" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:id="@+id/iv_transaction_point" android:layout_width="match_parent" android:layout_height="180dp" android:src="0x7f080189" android:scaleType="fitXY"/>
                <ImageView android:id="@+id/iv_sd" android:background="#50000000" android:visibility="visible" android:layout_width="match_parent" android:layout_height="180dp" android:scaleType="fitXY"/>
                <RelativeLayout android:id="@+id/layout_close" android:background="?attr/selectableItemBackground" android:visibility="visible" android:layout_width="@dimen/actionbar_height" android:layout_height="@dimen/actionbar_height" android:layout_alignParentLeft="true">
                    <com.mikepenz.iconics.view.IconicsImageView android:layout_width="@dimen/icon_size_small" android:layout_height="@dimen/icon_size_small" android:layout_centerInParent="true" app:iiv_color="@android:color/white" app:iiv_icon="@string/gmd_arrow_back"/>
                </RelativeLayout>
                <TextView android:textSize="14sp" android:textColor="@android:color/white" android:id="@+id/tv_phone" android:background="?attr/selectableItemBackground" android:paddingBottom="5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginRight="@dimen/layout_margin" android:text="1234" android:layout_alignBottom="@+id/iv_sd"/>
                <TextView android:textSize="14sp" android:textColor="@android:color/white" android:id="@+id/tv_address" android:background="?attr/selectableItemBackground" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginRight="@dimen/layout_margin" android:text="address" android:layout_above="@+id/tv_phone" android:layout_alignBottom="@+id/iv_sd"/>
                <TextView android:textSize="15sp" android:textColor="#edbb8a" android:id="@+id/tv_bill_code" android:background="?attr/selectableItemBackground" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/layout_margin" android:text="1234" android:layout_above="@+id/tv_address" android:layout_alignTop="@+id/tv_name" android:layout_alignParentRight="true"/>
                <TextView android:textSize="15sp" android:textColor="@android:color/white" android:id="@+id/tv_bill_code_sub" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="3dp" android:text="Mã:" android:layout_toLeftOf="@+id/tv_bill_code" android:layout_alignTop="@+id/tv_name" android:layout_centerVertical="true"/>
                <TextView android:textSize="15sp" android:textColor="#edbb8a" android:id="@+id/tv_name" android:background="?attr/selectableItemBackground" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:text="Name" android:layout_toLeftOf="@+id/tv_bill_code_sub" android:layout_above="@+id/tv_address" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <TextView android:textSize="@dimen/text_size_normal" android:textStyle="normal" android:textColor="@android:color/black" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/tv_description" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginTop="@dimen/layout_margin_small" android:layout_marginRight="@dimen/layout_margin" android:maxLines="5"/>
            <RelativeLayout android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ProgressBar android:id="@+id/loading" android:background="@color/md_teal_500" android:layout_width="25dp" android:layout_height="25dp" android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <TextView android:textSize="@dimen/text_size_normal" android:textStyle="normal" android:textColor="@color/md_teal_500" android:layout_gravity="center_vertical" android:id="@+id/tv_link_view_more" android:background="?attr/selectableItemBackground" android:paddingTop="2dp" android:paddingBottom="2dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginRight="@dimen/layout_margin" android:layout_marginBottom="@dimen/layout_margin_small" android:text="@string/txt_view_more_underline"/>
            <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <com.bplus.vtpay.util.materialedittext.MaterialEditText android:id="@+id/edt_amount" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginTop="@dimen/layout_margin_small" android:layout_marginRight="@dimen/layout_margin" android:hint="Số tiền thanh toán(đ)" app:met_bottomTextSize="@dimen/text_size_sub" app:met_clearButton="true" app:met_floatingLabel="2" app:met_primaryColor="@color/tokenDark100" style="@style/edit_text_amount_style"/>
                    <com.bplus.vtpay.util.materialedittext.MaterialEditText android:textStyle="normal" android:id="@+id/edt_content" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginTop="@dimen/layout_margin" android:layout_marginRight="@dimen/layout_margin" android:layout_marginBottom="@dimen/layout_margin_small" android:hint="Nội dung (tùy chọn)" android:singleLine="true" android:maxLength="@integer/content_length" android:inputType="textCapSentences" app:met_bottomTextSize="@dimen/text_size_sub" app:met_clearButton="true" app:met_floatingLabel="2" app:met_primaryColor="@color/tokenDark100" style="@style/edit_text_style"/>
                    <Button android:id="@+id/tv_send_bottom" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_margin" android:layout_marginBottom="@dimen/layout_margin" android:text="THANH TOÁN" style="@style/button_gradient"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/line_height">
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="13sp" android:textColor="@color/md_grey_600" android:id="@+id/tv_note" android:background="?attr/selectableItemBackground" android:paddingTop="3dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginRight="@dimen/layout_margin" android:text="@string/txt_pay_at_transaction_point_note" android:layout_centerVertical="true"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
    <FrameLayout android:id="@+id/fragment_container" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="match_parent"/>
</RelativeLayout>
