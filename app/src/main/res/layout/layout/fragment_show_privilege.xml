<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="bottom" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="@android:color/white" android:padding="@dimen/layout_margin_small" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/text_size_header" android:textColor="@color/viettel_color" android:gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Sử dụng\10Voucher Viettel Privilege" android:layout_centerInParent="true"/>
            <ImageView android:id="@+id/btn_close" android:background="?attr/selectableItemBackgroundBorderless" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="5dp" android:tint="@color/md_grey_900" android:layout_alignParentRight="true" app:srcCompat="@drawable/icon_close_vector"/>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:padding="@dimen/layout_margin_normal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.bplus.vtpay.view.SingleLineTextView android:textSize="15sp" android:textColor="@color/md_grey_900" android:background="?attr/selectableItemBackground" android:paddingTop="3dp" android:paddingBottom="5dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="@dimen/layout_margin_small" android:text="Số tiền Voucher Viettel Privilege:" android:layout_weight="1" android:layout_toLeftOf="@+id/tv_name" android:layout_centerVertical="true"/>
                <TextView android:textSize="15sp" android:textColor="@color/viettel_color" android:id="@+id/tv_voucher_point" android:background="?attr/selectableItemBackground" android:paddingTop="3dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            </LinearLayout>
            <View android:background="#e0e0e0" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="5dp" android:layout_marginBottom="@dimen/layout_margin_normal" android:layout_below="@+id/tv_debit"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.bplus.vtpay.view.SingleLineTextView android:textSize="15sp" android:textColor="@color/md_grey_900" android:background="?attr/selectableItemBackground" android:paddingTop="3dp" android:paddingBottom="5dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="@dimen/layout_margin_small" android:text="Số tiền ưu đãi (x2 giá trị Voucher):" android:layout_weight="1" android:layout_toLeftOf="@+id/tv_name" android:layout_centerVertical="true"/>
                <TextView android:textSize="15sp" android:textColor="@color/viettel_color" android:id="@+id/tv_trans_amount" android:background="?attr/selectableItemBackground" android:paddingTop="3dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            </LinearLayout>
            <View android:background="#e0e0e0" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="5dp" android:layout_marginBottom="@dimen/layout_margin_normal" android:layout_below="@+id/tv_debit"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="15sp" android:textColor="@color/md_grey_900" android:background="?attr/selectableItemBackground" android:paddingTop="3dp" android:paddingBottom="5dp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Chiết khấu:" android:layout_weight="1" android:layout_toLeftOf="@+id/tv_name" android:layout_centerVertical="true"/>
                <TextView android:textSize="15sp" android:textColor="@color/viettel_color" android:id="@+id/tv_discount_percent" android:background="?attr/selectableItemBackground" android:paddingTop="3dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            </LinearLayout>
            <View android:background="#e0e0e0" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="5dp" android:layout_marginBottom="@dimen/layout_margin_normal" android:layout_below="@+id/tv_debit"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="15sp" android:textColor="@color/md_grey_900" android:background="?attr/selectableItemBackground" android:paddingTop="3dp" android:paddingBottom="5dp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Phí:" android:layout_weight="1" android:layout_toLeftOf="@+id/tv_name" android:layout_centerVertical="true"/>
                <TextView android:textSize="15sp" android:textColor="@color/viettel_color" android:id="@+id/tv_trans_fee" android:background="?attr/selectableItemBackground" android:paddingTop="3dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            </LinearLayout>
            <View android:background="#e0e0e0" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="5dp" android:layout_marginBottom="@dimen/layout_margin_normal" android:layout_below="@+id/tv_debit"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="15sp" android:textColor="@color/md_grey_900" android:background="?attr/selectableItemBackground" android:paddingTop="3dp" android:paddingBottom="5dp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Số tiền phải thanh toán:" android:layout_weight="1" android:layout_toLeftOf="@+id/tv_name" android:layout_centerVertical="true"/>
                <TextView android:textSize="15sp" android:textColor="@color/viettel_color" android:id="@+id/tv_real_amount" android:background="?attr/selectableItemBackground" android:paddingTop="3dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            </LinearLayout>
            <View android:background="#e0e0e0" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="5dp" android:layout_marginBottom="@dimen/layout_margin_normal" android:layout_below="@+id/tv_debit"/>
            <Button android:id="@+id/btn_understend" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="0dp" android:layout_marginTop="@dimen/layout_margin_normal" android:layout_marginRight="0dp" android:text="ĐỒNG Ý" style="@style/button_gradient"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
