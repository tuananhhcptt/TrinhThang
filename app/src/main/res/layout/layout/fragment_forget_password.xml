<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="#e4e4e4" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:background="@drawable/bg_input" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="8dp">
            <ImageView android:layout_width="150dp" android:layout_height="150dp" android:src="@drawable/ic_forget_pass"/>
            <TextView android:textSize="@dimen/text_size_normal" android:textColor="#000000" android:gravity="center" android:id="@+id/txt_title_1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Hệ thống chưa nhận diện được tài khoản"/>
            <TextView android:textSize="@dimen/text_size_normal" android:textColor="#000000" android:gravity="center" android:id="@+id/txt_title_2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="Hãy điền thông tin để lấy lai mât khẩu của bạn"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/lnl_last_4_number" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginTop="16dp" android:layout_marginRight="@dimen/layout_margin">
                <TextView android:textStyle="bold" android:textColor="#000000" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Nhập 4 số cuối của thẻ đã liên kết"/>
                <EditText android:id="@+id/edt_last_4_number" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:hint="xxxx xxxx xxxx ****" android:maxLength="4" android:inputType="phone" style="@style/edittext_info_style"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/lnl_denfine_number" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginTop="8dp" android:layout_marginRight="@dimen/layout_margin">
                <TextView android:textStyle="bold" android:textColor="#000000" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Số CMTND"/>
                <EditText android:id="@+id/edt_denfine_number" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:hint="Nhập số CMTND" android:maxLength="20" style="@style/edittext_info_style"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/lnl_money" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginTop="8dp" android:layout_marginRight="@dimen/layout_margin">
                <TextView android:textStyle="bold" android:textColor="#000000" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Số dư gần đúng"/>
                <EditText android:id="@+id/edt_money" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:hint="@string/title_vietnam_currency" android:maxLength="13" android:inputType="phone" style="@style/edittext_info_style"/>
            </LinearLayout>
            <EditText android:id="@+id/edt_OTP" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginTop="8dp" android:layout_marginRight="@dimen/layout_margin" android:hint="Nhập mã OTP" android:inputType="number" style="@style/edittext_info_style"/>
            <Button android:id="@+id/btn_next" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/_10sdp" android:layout_marginBottom="@dimen/layout_margin" android:text="Tiếp tục" style="@style/button_gradient"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
