<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@android:color/white" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView android:background="@color/md_grey_100" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:background="@color/md_grey_100" android:layout_width="match_parent" android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView android:id="@+id/lo_info_acc" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical" android:paddingTop="@dimen/layout_margin" android:paddingBottom="@dimen/layout_margin" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="@dimen/text_size_title" android:textStyle="bold" android:textColor="@android:color/black" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Chứng minh thư / hộ chiếu"/>
                    <TextView android:textSize="@dimen/text_size_normal" android:textStyle="normal" android:textColor="@color/md_grey_600" android:layout_gravity="center_horizontal" android:paddingLeft="@dimen/layout_margin" android:paddingTop="@dimen/layout_margin_small" android:paddingRight="@dimen/layout_margin" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Ảnh chụp cần thể hiện rõ và đầy đủ thông tin trên bề mặt thẻ, không tẩy xóa hay dùng phần mềm chỉnh sửa."/>
                    <LinearLayout android:orientation="horizontal" android:paddingLeft="@dimen/layout_margin" android:paddingRight="@dimen/layout_margin" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_margin">
                        <RelativeLayout android:id="@+id/btn_select_identify" android:layout_width="0dp" android:layout_height="wrap_content" android:foreground="?attr/selectableItemBackground" android:layout_weight="1">
                            <ImageView android:id="@+id/iv_identify" android:layout_width="match_parent" android:layout_height="wrap_content" android:src="0x7f0807a6" android:scaleType="fitXY" android:layout_alignParentLeft="true"/>
                            <RelativeLayout android:id="@+id/lo_verify1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
                                <ImageView android:id="@+id/iv_verify1" android:layout_width="@dimen/icon_size_normal" android:layout_height="@dimen/icon_size_normal" android:src="0x7f08046e" android:tint="@color/viettel_color" android:layout_centerHorizontal="true"/>
                                <TextView android:textSize="@dimen/text_size_normal" android:textColor="@color/viettel_color" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:text="Ảnh mặt trước" android:layout_below="@+id/iv_verify1" android:layout_centerHorizontal="true"/>
                            </RelativeLayout>
                        </RelativeLayout>
                        <RelativeLayout android:id="@+id/btn_select_identify1" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:foreground="?attr/selectableItemBackground" android:layout_weight="1">
                            <ImageView android:id="@+id/iv_identify1" android:layout_width="match_parent" android:layout_height="wrap_content" android:src="0x7f0807a7" android:scaleType="fitXY" android:layout_alignParentLeft="true"/>
                            <RelativeLayout android:id="@+id/lo_verify2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
                                <ImageView android:id="@+id/iv_verify2" android:layout_width="@dimen/icon_size_normal" android:layout_height="@dimen/icon_size_normal" android:src="0x7f08046e" android:tint="@color/viettel_color" android:layout_centerHorizontal="true"/>
                                <TextView android:textSize="@dimen/text_size_normal" android:textColor="@color/viettel_color" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:text="Ảnh mặt sau" android:layout_below="@+id/iv_verify2" android:layout_centerHorizontal="true"/>
                            </RelativeLayout>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout android:gravity="center" android:orientation="horizontal" android:padding="5dp" android:layout_width="match_parent" android:layout_height="match_parent" android:foreground="?attr/selectableItemBackground"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView android:id="@+id/lo_info" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/line_height">
                <LinearLayout android:orientation="vertical" android:paddingTop="@dimen/layout_margin" android:paddingBottom="@dimen/layout_margin" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="@dimen/text_size_title" android:textStyle="bold" android:textColor="@android:color/black" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Ảnh chụp thẳng mặt"/>
                    <TextView android:textSize="@dimen/text_size_normal" android:textStyle="normal" android:textColor="@color/md_grey_600" android:layout_gravity="center_horizontal" android:paddingLeft="@dimen/layout_margin" android:paddingTop="@dimen/layout_margin_small" android:paddingRight="@dimen/layout_margin" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Ảnh không bị che bằng kính mắt, không tẩy xóa hay dùng phần mềm chỉnh sửa."/>
                    <RelativeLayout android:layout_gravity="center_horizontal" android:id="@+id/btn_select_camera" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_margin" android:foreground="?attr/selectableItemBackground">
                        <ImageView android:id="@+id/iv_camera" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="0x7f0807a5" android:scaleType="fitXY" android:layout_alignParentLeft="true"/>
                        <RelativeLayout android:id="@+id/lo_verify3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
                            <ImageView android:id="@+id/iv_verify3" android:layout_width="@dimen/icon_size_normal" android:layout_height="@dimen/icon_size_normal" android:src="0x7f08046e" android:tint="@color/viettel_color" android:layout_centerHorizontal="true"/>
                            <TextView android:textSize="@dimen/text_size_normal" android:textColor="@color/viettel_color" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:text="Ảnh mặt trước" android:layout_below="@+id/iv_verify3" android:layout_centerHorizontal="true"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <com.bplus.vtpay.util.materialedittext.MaterialEditText android:id="@+id/edt_identify" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginTop="@dimen/layout_margin" android:layout_marginRight="@dimen/layout_margin" android:hint="@string/identify" app:met_bottomTextSize="@dimen/text_size_sub" app:met_clearButton="true" app:met_floatingLabel="2" app:met_primaryColor="@color/tokenDark100" style="@style/edit_text_identity_style_1"/>
                    <RelativeLayout android:id="@+id/lo_date_of_issue" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginTop="@dimen/layout_margin_small" android:layout_marginRight="@dimen/layout_margin">
                        <com.bplus.vtpay.util.materialedittext.MaterialEditText android:id="@+id/edt_date_of_issue" android:focusable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Ngày cấp" android:ems="10" android:singleLine="true" android:maxLength="35" android:digits="@string/digits_text" android:editable="false" android:inputType="none" app:met_bottomTextSize="@dimen/text_size_sub" app:met_clearButton="true" app:met_floatingLabel="2" style="@style/edit_text_style"/>
                        <View android:id="@+id/btn_select_date" android:background="?attr/selectableItemBackground" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignTop="@+id/edt_date_of_issue" android:layout_alignBottom="@+id/edt_date_of_issue"/>
                    </RelativeLayout>
                    <com.bplus.vtpay.util.materialedittext.MaterialEditText android:id="@+id/edt_email" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginTop="@dimen/layout_margin" android:layout_marginRight="@dimen/layout_margin" android:hint="@string/email" app:met_bottomTextSize="@dimen/text_size_sub" app:met_clearButton="true" app:met_floatingLabel="2" app:met_primaryColor="@color/tokenDark100" style="@style/edit_text_email"/>
                    <com.bplus.vtpay.util.materialedittext.MaterialEditText android:textSize="@dimen/text_size_edittext" android:textStyle="normal" android:id="@+id/edt_address" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginTop="@dimen/layout_margin" android:layout_marginRight="@dimen/layout_margin" android:hint="@string/address" android:singleLine="true" android:maxLength="@integer/address_length" android:inputType="textCapWords" android:imeOptions="actionNext" app:met_bottomTextSize="@dimen/text_size_sub" app:met_clearButton="true" app:met_floatingLabel="2" app:met_primaryColor="@color/tokenDark100"/>
                    <TextView android:id="@+id/btn_upload" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_margin_big" android:layout_marginBottom="@dimen/layout_margin_small" android:text="GỬI THÔNG TIN" style="@style/button_gradient"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <View android:background="0x7f0807b5" android:layout_width="match_parent" android:layout_height="2dp"/>
</RelativeLayout>
