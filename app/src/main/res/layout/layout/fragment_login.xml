<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@android:color/white" android:focusableInTouchMode="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar android:theme="@style/ThemeOverlay.AppCompat.Light" android:orientation="vertical" android:id="@+id/toolbar" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="@dimen/actionbar_height" app:layout_collapseMode="1" app:popupTheme="@style/ThemeOverlay.AppCompat.Light" app:titleTextAppearance="@style/Toolbar.TitleText"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/toolbar">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:paddingBottom="@dimen/layout_margin" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical" android:paddingBottom="@dimen/layout_margin" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/btn_finger_print">
                    <com.bplus.vtpay.util.materialedittext.MaterialEditText android:id="@+id/edt_phone_number" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginTop="5dp" android:layout_marginRight="@dimen/layout_margin" android:layout_marginBottom="2dp" android:hint="@string/hint_phone_viettel" android:digits="1234567890" android:imeOptions="actionDone" app:met_bottomTextSize="@dimen/text_size_sub" app:met_clearButton="true" app:met_floatingLabel="2" app:met_primaryColor="@color/tokenDark100" style="@style/edit_text_phone_style"/>
                    <TextView android:textSize="@dimen/text_size_sub" android:textColor="@color/md_grey_500" android:id="@+id/lo_phone_sub" android:paddingLeft="@dimen/layout_margin" android:paddingRight="@dimen/layout_margin" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="(*) Số điện thoại này đại diện cho tài khoản ViettelPay và được dùng để xác minh mỗi giao dịch." android:layout_centerVertical="true"/>
                </LinearLayout>
                <com.bplus.vtpay.util.materialedittext.MaterialEditText android:id="@+id/edt_cmnd" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginTop="@dimen/layout_margin_small" android:layout_marginRight="@dimen/layout_margin" android:hint="@string/identify" app:met_bottomTextSize="@dimen/text_size_sub" app:met_clearButton="true" app:met_floatingLabel="2" app:met_primaryColor="@color/tokenDark100" style="@style/edit_text_identity_style"/>
                <RelativeLayout android:padding="@dimen/layout_margin" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="@dimen/text_size_normal" android:textColor="@color/md_grey_900" android:id="@+id/tv_select" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Xác thực giao dịch bằng:" android:layout_centerVertical="true"/>
                    <RadioGroup android:orientation="horizontal" android:id="@+id/rg_select" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/tv_select" android:layout_centerVertical="true">
                        <RadioButton android:id="@+id/rb_ussd" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="USSD"/>
                        <RadioButton android:id="@+id/rb_sms" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="SMS"/>
                    </RadioGroup>
                </RelativeLayout>
                <TextView android:id="@+id/btn_login" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_margin_normal" android:text="ĐĂNG NHẬP" style="@style/button_gradient"/>
                <LinearLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_margin" android:layout_marginBottom="@dimen/layout_margin_small">
                    <TextView android:textSize="@dimen/text_size_normal" android:textColor="@android:color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Bảo mật với"/>
                    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin_small" android:src="0x7f08055f"/>
                </LinearLayout>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                    <View android:background="@color/md_grey_300" android:layout_width="match_parent" android:layout_height="1dp" android:layout_centerVertical="true"/>
                    <TextView android:textColor="@color/md_grey_600" android:background="@android:color/white" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Hoặc" android:layout_centerInParent="true"/>
                </RelativeLayout>
                <RelativeLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:background="@drawable/bg_green_with_shadow_gradient" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginTop="@dimen/layout_margin_big" android:layout_marginRight="@dimen/layout_margin" android:layout_marginBottom="@dimen/layout_margin_big" android:foreground="?attr/selectableItemBackground">
                    <ImageView android:id="@+id/iv_new" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginBottom="2dp" android:src="0x7f08065d" android:tint="@android:color/white" android:layout_alignTop="@+id/tv_auto_login" android:layout_alignBottom="@+id/tv_auto_login" android:layout_centerVertical="true"/>
                    <View android:id="@+id/v_tab" android:background="@android:color/white" android:layout_width="0.5dp" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:layout_toRightOf="@+id/iv_new" android:layout_alignTop="@+id/tv_auto_login" android:layout_alignBottom="@+id/tv_auto_login"/>
                    <TextView android:textSize="@dimen/text_size_normal" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tv_auto_login" android:paddingTop="12dp" android:paddingBottom="12dp" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="@dimen/layout_margin" android:text="@string/label_auto_login_3g" android:layout_centerHorizontal="true"/>
                    <View android:id="@+id/btn_login_3g" android:background="?attr/selectableItemBackground" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignTop="@+id/tv_auto_login" android:layout_alignBottom="@+id/tv_auto_login"/>
                </RelativeLayout>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                    <View android:background="@color/md_grey_300" android:layout_width="match_parent" android:layout_height="@dimen/line_height" android:layout_centerVertical="true"/>
                </RelativeLayout>
                <LinearLayout android:orientation="vertical" android:background="@android:color/white" android:visibility="visible" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginTop="@dimen/line_height" android:layout_weight="1">
                    <TextView android:textSize="@dimen/text_size_button" android:textColor="@color/md_grey_400" android:id="@+id/tv_term" android:paddingLeft="@dimen/layout_margin" android:paddingTop="@dimen/layout_margin_small" android:paddingRight="@dimen/layout_margin" android:paddingBottom="@dimen/layout_margin_small" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_margin_small" android:text="@string/read_term" android:layout_centerInParent="true"/>
                    <TextView android:textSize="@dimen/text_size_button" android:textColor="@color/md_grey_400" android:gravity="center" android:id="@+id/tv_help" android:paddingLeft="@dimen/layout_margin" android:paddingTop="@dimen/layout_margin_small" android:paddingRight="@dimen/layout_margin" android:paddingBottom="@dimen/layout_margin_small" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/help_login1" android:layout_centerInParent="true"/>
                </LinearLayout>
                <TextView android:textColor="@color/md_grey_600" android:gravity="center" android:id="@+id/tv_finger" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_margin" android:text="Hoặc đăng nhập vân tay" android:layout_centerInParent="true"/>
                <ImageView android:layout_gravity="center_horizontal" android:id="@+id/btn_finger_print" android:background="?attr/selectableItemBackground" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin" android:layout_marginTop="@dimen/layout_margin_small" android:layout_marginRight="@dimen/layout_margin" android:layout_marginBottom="@dimen/layout_margin" android:src="0x7f080506" android:tint="@color/md_grey_600"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <View android:background="@color/color_line" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_below="@+id/toolbar"/>
</RelativeLayout>
