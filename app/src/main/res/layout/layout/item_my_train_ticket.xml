<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="#ffffff" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:background="@drawable/border_my_train_ticket" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:weightSum="10">
            <TextView android:textSize="@dimen/text_size_normal" android:textColor="#000000" android:gravity="center" android:id="@+id/trainDepart" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2"/>
            <ImageView android:layout_gravity="center" android:id="@+id/img_oneWay" android:layout_width="0dp" android:layout_height="wrap_content" android:src="0x7f0805e7" android:layout_weight="1"/>
            <TextView android:textSize="@dimen/text_size_normal" android:textColor="#000000" android:gravity="center" android:id="@+id/trainArrival" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2"/>
            <TextView android:textSize="@dimen/text_size_normal" android:textColor="#000000" android:gravity="end" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Tổng tiền" android:layout_weight="4.5"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:weightSum="10">
            <TextView android:textSize="@dimen/text_size_normal" android:textColor="#7d7d7d" android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Số lượng vé: " android:layout_weight="3"/>
            <TextView android:textSize="@dimen/text_size_normal" android:textColor="#000000" android:id="@+id/totalSeat" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
            <TextView android:textSize="@dimen/text_size_header" android:textColor="#000000" android:gravity="end" android:id="@+id/totalMoney" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="5.5"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:weightSum="10">
            <TextView android:textSize="@dimen/text_size_sub" android:textStyle="italic" android:textColor="#ee0033" android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Xem chi tiết: " android:layout_weight="2.8"/>
        </LinearLayout>
        <View android:background="#d0d0d0" android:layout_width="match_parent" android:layout_height="0.1dp" android:layout_marginLeft="4dp" android:layout_marginTop="10dp" android:layout_marginRight="4dp" android:layout_marginBottom="10dp"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/lnTrainDepart" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginBottom="5dp" android:weightSum="10">
                <ImageView android:layout_gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:src="0x7f080632" android:layout_weight="1"/>
                <TextView android:textSize="@dimen/text_size_normal" android:textColor="#000000" android:layout_gravity="center" android:id="@+id/lnDepartStartDateDepart" android:layout_width="0dp" android:layout_height="wrap_content" android:text="12/05" android:layout_weight="1.5"/>
                <TextView android:textSize="@dimen/text_size_normal" android:textStyle="bold" android:textColor="#000000" android:layout_gravity="center" android:id="@+id/lnDepartStartTimeDepart" android:layout_width="0dp" android:layout_height="wrap_content" android:text="6:00" android:layout_weight="1.2"/>
                <ImageView android:layout_gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:src="0x7f080625" android:text="Tổng tiền" android:layout_weight="1"/>
                <TextView android:textSize="@dimen/text_size_normal" android:textColor="#000000" android:layout_gravity="center" android:id="@+id/lnDepartEndDateDepart" android:layout_width="0dp" android:layout_height="wrap_content" android:text="12/05" android:layout_weight="1.5"/>
                <TextView android:textSize="@dimen/text_size_normal" android:textStyle="bold" android:textColor="#000000" android:layout_gravity="center" android:id="@+id/lnDepartEndTimeDepart" android:layout_width="0dp" android:layout_height="wrap_content" android:text="23:00" android:layout_weight="1.2"/>
                <TextView android:textSize="@dimen/text_size_normal" android:textColor="#000000" android:gravity="end" android:layout_gravity="end" android:id="@+id/lnDepartTrain" android:layout_width="0dp" android:layout_height="wrap_content" android:src="0x7f080625" android:text="Tàu SE 77" android:layout_weight="2.2"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginBottom="10dp" android:weightSum="10">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2.5"/>
                <TextView android:textSize="@dimen/text_size_sub" android:textColor="#b2b2b2" android:gravity="left" android:id="@+id/tvDepartTrainStart" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Hà Nội" android:layout_weight="2.2"/>
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.5"/>
                <TextView android:textSize="@dimen/text_size_sub" android:textColor="#b2b2b2" android:gravity="left" android:id="@+id/tvDepartTrainEnd" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Đà Nẵng" android:layout_weight="2"/>
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2.2"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/lnTrainArrival" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="5dp">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginBottom="5dp" android:weightSum="10">
                <ImageView android:layout_gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:src="0x7f080633" android:layout_weight="1"/>
                <TextView android:textSize="@dimen/text_size_normal" android:textColor="#000000" android:layout_gravity="center" android:id="@+id/lnArrivalStartDateDepart" android:layout_width="0dp" android:layout_height="wrap_content" android:text="12/05" android:layout_weight="1.5"/>
                <TextView android:textSize="@dimen/text_size_normal" android:textStyle="bold" android:textColor="#000000" android:layout_gravity="center" android:id="@+id/lnArrivalStartTimeDepart" android:layout_width="0dp" android:layout_height="wrap_content" android:text="6:00" android:layout_weight="1.2"/>
                <ImageView android:layout_gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:src="0x7f080625" android:layout_weight="1"/>
                <TextView android:textSize="@dimen/text_size_normal" android:textColor="#000000" android:layout_gravity="center" android:id="@+id/lnArrivalEndDateDepart" android:layout_width="0dp" android:layout_height="wrap_content" android:text="12/05" android:layout_weight="1.5"/>
                <TextView android:textSize="@dimen/text_size_normal" android:textStyle="bold" android:textColor="#000000" android:layout_gravity="center" android:id="@+id/lnArrivalEndTimeDepart" android:layout_width="0dp" android:layout_height="wrap_content" android:text="23:00" android:layout_weight="1.2"/>
                <TextView android:textSize="@dimen/text_size_normal" android:textColor="#000000" android:gravity="end" android:layout_gravity="end" android:id="@+id/lnArrivalTrain" android:layout_width="0dp" android:layout_height="wrap_content" android:src="0x7f080625" android:text="Tàu SE 77" android:layout_weight="2.2"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginBottom="10dp" android:weightSum="10">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2.5"/>
                <TextView android:textSize="@dimen/text_size_sub" android:textColor="#b2b2b2" android:gravity="left" android:id="@+id/tvArrivalTrainStart" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Hà Nội" android:layout_weight="2.2"/>
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.5"/>
                <TextView android:textSize="@dimen/text_size_sub" android:textColor="#b2b2b2" android:gravity="left" android:id="@+id/tvArrivalTrainEnd" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Đà Nẵng" android:layout_weight="2"/>
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2.2"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
