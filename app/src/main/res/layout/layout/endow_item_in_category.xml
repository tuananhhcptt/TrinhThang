        <Button android:id="@+id/btn_use" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="@dimen/_32sdp" android:text="Sử dụng ngay" android:layout_alignParentRight="true" android:layout_alignParentEnd="true" style="@style/call_to_action_gradient"/>
    </RelativeLayout>
</LinearLayout>
