<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="?attr/selectableItemBackground" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/lo_info" android:paddingTop="@dimen/layout_margin_small" android:paddingBottom="@dimen/layout_margin_small" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin_normal" android:layout_marginRight="@dimen/layout_margin_normal">
            <com.bplus.vtpay.view.CircleImageView android:id="@+id/civ_date" android:layout_width="@dimen/icon_size_big" android:layout_height="@dimen/icon_size_big" android:src="@drawable/ic_logo_vtpay_red_new" android:layout_centerVertical="true" app:civ_fill_color="@color/md_grey_500"/>
            <TextView android:textSize="@dimen/text_size_normal" android:textStyle="bold" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tv_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignLeft="@+id/civ_date" android:layout_alignTop="@+id/civ_date" android:layout_alignRight="@+id/civ_date" android:layout_alignBottom="@+id/civ_date" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:layout_weight="2">
            <TextView android:textSize="@dimen/text_size_normal" android:textStyle="bold" android:textColor="@color/md_grey_600" android:gravity="center_vertical" android:id="@+id/tv_title" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <TextView android:textSize="@dimen/text_size_normal" android:textColor="@color/md_grey_600" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/tv_desc" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:maxLines="2" android:layout_below="@+id/tv_title"/>
            <TextView android:textSize="@dimen/text_size_normal" android:textColor="@color/md_grey_600" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/tv_status" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:maxLines="2" android:layout_below="@+id/tv_desc"/>
        </RelativeLayout>
        <ImageView android:layout_width="@dimen/transfer_arow_size" android:layout_height="@dimen/transfer_arow_size" android:layout_marginRight="5dp" android:src="0x7f080668"/>
    </LinearLayout>
    <View android:background="@color/color_line" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/lo_info"/>
</RelativeLayout>
