<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="@color/colorWhite" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textSize="@dimen/labels_text_size" android:textColor="@color/label_text_color" android:id="@+id/tv_title_info" android:padding="@dimen/padding_large" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Thông tin khách hàng" android:textAllCaps="true"/>
        <LinearLayout android:orientation="vertical" android:background="@android:color/white" android:padding="@dimen/layout_margin_normal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/tv_title_info">
            <com.bplus.vtpay.util.materialedittext.MaterialEditText android:id="@+id/edt_name" android:focusable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Họ tên khách hàng *" android:maxLength="50" android:layout_centerVertical="true" app:met_bottomTextSize="@dimen/text_size_sub" app:met_clearButton="true" app:met_floatingLabel="2" app:met_floatingLabelAlwaysShown="true" app:met_textColor="@color/text_color_new" style="@style/edit_text_style"/>
            <com.bplus.vtpay.util.materialedittext.MaterialEditText android:id="@+id/edt_phone" android:focusable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_small" android:hint="Số điện thoại *" android:layout_centerVertical="true" app:met_bottomTextSize="@dimen/text_size_sub" app:met_clearButton="true" app:met_floatingLabel="2" app:met_floatingLabelAlwaysShown="true" app:met_textColor="@color/text_color_new" style="@style/edit_text_phone_style_new"/>
            <com.bplus.vtpay.util.materialedittext.MaterialEditText android:textColor="@color/text_color_new" android:id="@+id/edt_email" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_small" android:hint="Nhập email để nhận mã evoucher" android:maxLength="50" android:layout_centerVertical="true" android:inputType="textEmailAddress" app:met_bottomTextSize="@dimen/text_size_sub" app:met_clearButton="true" app:met_floatingLabel="2" app:met_floatingLabelText="Email" style="@style/edit_text_style"/>
        </LinearLayout>
        <Button android:id="@+id/btn_send" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_margin" android:layout_marginBottom="@dimen/layout_margin_small" android:text="Tiến hành thanh toán" android:layout_alignParentBottom="true" style="@style/button_gradient"/>
    </RelativeLayout>
</LinearLayout>
