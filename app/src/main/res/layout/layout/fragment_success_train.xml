<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center_horizontal" android:orientation="vertical" android:background="#f7f8f8" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:background="@drawable/color_gradient_new" android:layout_width="match_parent" android:layout_height="wrap_content" android:src="0x7f080796"/>
    <LinearLayout android:orientation="vertical" android:background="#ffffff" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="10dp" android:layout_marginRight="5dp">
        <TextView android:textSize="@dimen/text_size_normal" android:textColor="#000000" android:gravity="center" android:id="@+id/title_train" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Bạn đã đặt vé tàu hỏa khứ hồi thành công"/>
        <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/text_size_normal" android:textStyle="bold" android:textColor="#000000" android:id="@+id/title_train_depart" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <ImageView android:layout_gravity="center" android:id="@+id/img_oneWay" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:src="0x7f0805e7"/>
            <TextView android:textSize="@dimen/text_size_normal" android:textStyle="bold" android:textColor="#000000" android:id="@+id/title_train_arrival" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:background="#ffffff" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="10dp" android:layout_marginRight="5dp">
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="2">
            <TextView android:textSize="@dimen/text_size_normal" android:textColor="#000000" android:gravity="start" android:layout_gravity="start" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Số tiền thanh toán(đ)" android:layout_weight="1"/>
            <TextView android:textSize="@dimen/text_size_normal" android:textColor="#000000" android:gravity="end" android:layout_gravity="end" android:id="@+id/total_money" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:weightSum="2">
            <TextView android:textSize="@dimen/text_size_normal" android:textColor="#000000" android:gravity="start" android:layout_gravity="start" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Mã giao dịch" android:layout_weight="1"/>
            <TextView android:textSize="@dimen/text_size_normal" android:textColor="#ee0033" android:gravity="end" android:layout_gravity="end" android:id="@+id/transaction_number" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <Button android:id="@+id/btn_next_page" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/_30sdp" android:layout_marginBottom="@dimen/_15sdp" android:text="Màn hình chính" style="@style/button_gradient"/>
</LinearLayout>
