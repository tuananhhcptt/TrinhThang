<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/ins_discovery_background" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="@dimen/ins_car_disc_size" android:weightSum="2">
        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <ImageView android:id="@+id/img_main" android:layout_width="match_parent" android:layout_height="@dimen/ins_car_disc_size" android:adjustViewBounds="true"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="@dimen/ins_car_disc_size" android:weightSum="6" android:layout_weight="1">
            <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:weightSum="3" android:layout_weight="2">
                <LinearLayout android:id="@+id/bord_0" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                    <LinearLayout android:gravity="center" android:id="@+id/inner_color_0" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="2dp">
                        <ImageView android:id="@+id/img_0" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent" android:adjustViewBounds="true"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:id="@+id/bord_1" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                    <LinearLayout android:gravity="center" android:id="@+id/inner_color_1" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="2dp">
                        <ImageView android:id="@+id/img_1" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent" android:adjustViewBounds="true"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:id="@+id/bord_2" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                    <LinearLayout android:gravity="center" android:id="@+id/inner_color_2" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="2dp">
                        <ImageView android:id="@+id/img_2" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent" android:adjustViewBounds="true"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:weightSum="3" android:layout_weight="2">
                <LinearLayout android:id="@+id/bord_3" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                    <LinearLayout android:gravity="center" android:id="@+id/inner_color_3" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="2dp">
                        <ImageView android:id="@+id/img_3" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent" android:adjustViewBounds="true"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:id="@+id/bord_4" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                    <LinearLayout android:gravity="center" android:id="@+id/inner_color_4" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="2dp">
                        <ImageView android:id="@+id/img_4" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent" android:adjustViewBounds="true"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:id="@+id/bord_5" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                    <LinearLayout android:gravity="center" android:id="@+id/inner_color_5" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="2dp">
                        <ImageView android:id="@+id/img_5" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent" android:adjustViewBounds="true"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
                <TextView android:id="@+id/ins_dis_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1" android:paddingStart="2dp" android:paddingEnd="2dp"/>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="0dp" android:weightSum="10" android:layout_weight="1">
                <include layout="@layout/ins_lay_xcv_dis_but"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ImageView android:layout_gravity="top|left|center_vertical|center_horizontal|center|start" android:id="@+id/discoveryIconIv" android:layout_width="60dp" android:layout_height="60dp" android:scaleType="centerInside"/>
</FrameLayout>
