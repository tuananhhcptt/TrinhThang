<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@android:color/white" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout android:id="@+id/sw_refresh" android:layout_width="match_parent" android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView android:id="@+id/scroll_content" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="vertical" android:background="@color/md_grey_100" android:layout_width="match_parent" android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/line_height">
                    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/layout_margin">
                        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                            <ImageView android:id="@+id/iv_provider" android:layout_width="@dimen/iv_provider_width" android:layout_height="@dimen/iv_provider_height"/>
                            <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="24dp">
                                <TextView android:textSize="@dimen/text_size_title" android:textColor="@color/md_grey_500" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Đơn vị phát hành" android:includeFontPadding="false"/>
                                <TextView android:textSize="@dimen/text_size_provider" android:textColor="@android:color/black" android:id="@+id/tv_provider_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_provider_padding_top" android:includeFontPadding="false"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout android:orientation="vertical" android:id="@+id/lo_get_bill_code" android:background="@color/md_white_1000" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_margin">
                            <RadioGroup android:id="@+id/radioGroup" android:layout_width="match_parent" android:layout_height="wrap_content">
                                <RadioButton android:gravity="center_vertical" android:id="@+id/rb_identify" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:text="Nhập số CMND/Hộ chiếu"/>
                                <RadioButton android:gravity="center_vertical" android:id="@+id/rb_billcode" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Nhập số tài khoản/mã hợp đồng"/>
                                <RadioButton android:gravity="center_vertical" android:id="@+id/rb_phone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Nhập số điện thoại thuê bao"/>
                            </RadioGroup>
                            <com.bplus.vtpay.util.materialedittext.MaterialEditText android:textSize="14sp" android:id="@+id/edt_bill_code" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_small" android:hint="Nhập số CMND" android:imeOptions="actionDone" app:met_bottomTextSize="@dimen/text_size_sub" app:met_clearButton="true" app:met_floatingLabel="2"/>
                            <Button android:id="@+id/btn_check" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="0dp" android:layout_marginTop="@dimen/layout_margin_small" android:layout_marginRight="0dp" android:text="KIỂM TRA" style="@style/button_gradient"/>
                        </LinearLayout>
                        <LinearLayout android:orientation="vertical" android:id="@+id/lo_list_bill_code" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_margin_big">
                            <LinearLayout android:orientation="horizontal" android:background="@color/md_grey_300" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                                <TextView android:textSize="@dimen/text_size_title" android:textColor="@android:color/black" android:id="@+id/tv_id" android:layout_width="0dp" android:layout_height="wrap_content" android:text="STT" android:layout_weight="1"/>
                                <TextView android:textSize="@dimen/text_size_title" android:textColor="@android:color/black" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Mã hợp đồng" android:layout_weight="5"/>
                                <CheckBox android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:buttonTint="@color/viettel_color"/>
                            </LinearLayout>
                            <com.bplus.vtpay.view.MyRecycleView android:id="@+id/rcv_bill_code" android:layout_width="match_parent" android:layout_height="wrap_content" app:layoutManager="LinearLayoutManager"/>
                            <Button android:id="@+id/btn_continue" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="0dp" android:layout_marginTop="@dimen/layout_margin" android:layout_marginRight="0dp" android:text="TIẾP TỤC" style="@style/button_gradient"/>
                        </LinearLayout>
                        <LinearLayout android:orientation="vertical" android:id="@+id/lo_info" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                                <TextView android:textSize="12sp" android:textColor="@color/md_grey_600" android:id="@+id/tv_name_sub" android:background="?attr/selectableItemBackground" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_margin_small" android:text="Tên" android:layout_alignParentRight="true"/>
                                <TextView android:textSize="12sp" android:textColor="@color/md_grey_600" android:id="@+id/tv_bill_code_sub" android:background="?attr/selectableItemBackground" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_margin_small" android:text="Mã khách hàng" android:layout_toLeftOf="@+id/tv_name_sub"/>
                            </RelativeLayout>
                            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                                <TextView android:textSize="15sp" android:textColor="@color/md_grey_900" android:id="@+id/tv_name" android:background="?attr/selectableItemBackground" android:paddingTop="3dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                                <TextView android:textSize="15sp" android:textColor="@color/md_grey_900" android:id="@+id/tv_bill_code" android:background="?attr/selectableItemBackground" android:paddingTop="3dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/tv_name" android:layout_centerVertical="true"/>
                            </RelativeLayout>
                            <TextView android:textSize="12sp" android:textColor="@color/md_grey_600" android:id="@+id/tv_debit_sub" android:background="?attr/selectableItemBackground" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_margin_small" android:text="Nợ cước"/>
                            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                                <TextView android:textSize="16sp" android:textColor="@color/button_call_to_action_white_text_color" android:id="@+id/tv_reload" android:background="?attr/selectableItemBackground" android:paddingLeft="5dp" android:paddingTop="3dp" android:paddingRight="5dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="CHỌN LẠI" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                                <TextView android:textSize="15sp" android:textColor="@color/md_grey_900" android:id="@+id/tv_debit" android:background="?attr/selectableItemBackground" android:paddingTop="3dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/tv_reload" android:layout_centerVertical="true"/>
                            </RelativeLayout>
                            <View android:id="@+id/line_bottom" android:background="#e0e0e0" android:layout_width="match_parent" android:layout_height="2dp" android:layout_marginTop="5dp" android:layout_below="@+id/tv_debit"/>
                            <RadioGroup android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="@dimen/radio_height" android:layout_marginTop="@dimen/layout_margin_small">
                                <RadioButton android:textSize="@dimen/text_size_normal" android:gravity="center_vertical" android:id="@+id/rb_pay_current" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Nợ cước hiện tại" android:layout_weight="1"/>
                                <RadioButton android:textSize="@dimen/text_size_normal" android:gravity="center_vertical" android:id="@+id/rb_pay_prepaid" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Đóng trước" android:layout_weight="1"/>
                            </RadioGroup>
                            <RelativeLayout android:orientation="horizontal" android:id="@+id/lo_amount" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_margin_small">
                                <com.bplus.vtpay.util.materialedittext.MaterialEditText android:id="@+id/edt_amount" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/hint_amount" android:imeOptions="actionDone" app:met_bottomTextSize="@dimen/text_size_sub" app:met_clearButton="true" app:met_floatingLabel="2" app:met_primaryColor="@color/tokenDark100" style="@style/edit_text_amount_style"/>
                                <TextView android:textSize="@dimen/text_size_sub" android:textStyle="normal" android:textColor="@color/md_grey_600" android:gravity="left" android:id="@+id/tv_money_sub" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" " android:layout_below="@+id/edt_amount"/>
                            </RelativeLayout>
                            <RelativeLayout android:id="@+id/lo_list_amount" android:background="@color/md_white_1000" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_margin_small">
                                <Spinner android:id="@+id/spinner_amount" android:background="@null" android:layout_width="match_parent" android:layout_height="0dp" android:layout_alignBottom="@+id/edt_list_amount"/>
                                <com.bplus.vtpay.util.materialedittext.MaterialEditText android:id="@+id/edt_list_amount" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/hint_amount" android:lines="1" android:editable="false" app:met_bottomTextSize="@dimen/text_size_sub" app:met_floatingLabel="2" style="@style/edit_text_style"/>
                                <com.mikepenz.iconics.view.IconicsImageView android:padding="4dp" android:layout_width="16dp" android:layout_height="16dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:iiv_icon="@string/gmd_arrow_drop_down"/>
                                <View android:id="@+id/amount_list_click_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignTop="@+id/edt_list_amount" android:layout_alignBottom="@+id/edt_list_amount"/>
                            </RelativeLayout>
                        </LinearLayout>
                        <TextView android:textSize="@dimen/text_size_normal" android:textColor="@color/md_red_500" android:gravity="center" android:id="@+id/tv_not_sp" android:background="@drawable/border_dotted" android:padding="@dimen/layout_margin_small" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="@dimen/layout_margin" android:layout_marginRight="5dp" android:text="Không có gói cước phù hợp"/>
                        <Button android:id="@+id/btn_send" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="0dp" android:layout_marginTop="@dimen/layout_margin" android:layout_marginRight="0dp" android:text="THANH TOÁN" style="@style/button_gradient"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <TextView android:textSize="@dimen/text_size_title" android:textStyle="bold" android:textColor="@color/md_grey_600" android:id="@+id/tv_title_history" android:paddingLeft="@dimen/layout_margin" android:paddingTop="5dp" android:paddingRight="@dimen/layout_margin" android:paddingBottom="@dimen/layout_margin_small" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Giao dịch gần đây"/>
                <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <com.bplus.vtpay.view.MyRecycleView android:id="@+id/rcv_list_history" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_margin_small" android:nestedScrollingEnabled="false" app:layoutManager="StaggeredGridLayoutManager"/>
                        <TextView android:textSize="@dimen/text_size_normal" android:textStyle="normal" android:textColor="@color/viettel_color" android:id="@+id/tv_view_more" android:background="?attr/selectableItemBackgroundBorderless" android:paddingLeft="@dimen/layout_margin" android:paddingRight="@dimen/layout_margin" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_margin_small" android:text="@string/txt_view_more_underline"/>
                        <TextView android:id="@+id/tv_note" android:paddingLeft="@dimen/layout_margin" android:paddingRight="@dimen/layout_margin" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_margin" android:layout_marginBottom="@dimen/layout_margin" android:text="@string/note_pay_prepaid"/>
                        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                            <ProgressBar android:id="@+id/loading" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true"/>
                        </RelativeLayout>
                        <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
                            <WebView android:id="@+id/webview" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin_normal" android:layout_marginRight="@dimen/layout_margin_normal"/>
                        </ScrollView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <View android:background="0x7f0807b5" android:layout_width="match_parent" android:layout_height="2dp"/>
</RelativeLayout>
