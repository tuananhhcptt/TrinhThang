<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="8dp" android:foreground="?android:attr/selectableItemBackground" app:cardElevation="10dp">
    <RelativeLayout android:id="@+id/rl_item" android:background="@drawable/white_color_background_rounded_corner" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="20sp" android:textColor="#263d60" android:id="@+id/tv_money_sharing_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginTop="8dp" android:text="Thích viết gì thì viết vào đây" android:letterSpacing="-0.04"/>
        <TextView android:textSize="16sp" android:textColor="#263d60" android:id="@+id/tv_total_amount_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:text="Tổng tiền:" android:layout_below="@+id/tv_money_sharing_name" android:letterSpacing="-0.04"/>
        <TextView android:textSize="16sp" android:textColor="#263d60" android:id="@+id/tv_total_amount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:text="3.700.000đ" android:layout_toRightOf="@+id/tv_total_amount_text" android:layout_below="@+id/tv_money_sharing_name" android:letterSpacing="-0.04"/>
        <TextView android:textSize="16sp" android:textColor="#263d60" android:id="@+id/tv_division_method_text" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:text="Cách chia:" android:layout_below="@+id/tv_total_amount_text" android:letterSpacing="-0.04"/>
        <TextView android:textSize="16sp" android:textColor="#263d60" android:id="@+id/tv_division_method" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:text="Chia tiền đều" android:layout_toRightOf="@+id/tv_division_method_text" android:layout_below="@+id/tv_total_amount_text" android:letterSpacing="-0.04"/>
        <TextView android:textSize="14sp" android:textColor="#b6b6b6" android:id="@+id/tv_creator_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginTop="16dp" android:text="Người tạo:" android:layout_below="@+id/tv_total_amount" android:letterSpacing="-0.04"/>
        <TextView android:textSize="14sp" android:textColor="#b6b6b6" android:id="@+id/tv_creator" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:layout_marginTop="16dp" android:text="Nguyễn Quang Mạnh - 0985866636" android:layout_toRightOf="@+id/tv_creator_text" android:layout_below="@+id/tv_total_amount" android:letterSpacing="-0.04"/>
        <androidx.recyclerview.widget.RecyclerView android:orientation="horizontal" android:id="@+id/rv_image_people_to_share" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginBottom="8dp" android:layout_toLeftOf="@+id/tv_date_time" android:layout_below="@+id/tv_creator" android:layout_alignParentLeft="true" app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        <TextView android:textSize="14sp" android:textColor="#b6b6b6" android:gravity="end" android:id="@+id/tv_date_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginRight="12dp" android:layout_marginBottom="8dp" android:text="09:41, 12/06/2018" android:layout_below="@+id/tv_creator" android:layout_alignParentRight="true" android:letterSpacing="-0.04"/>
        <TextView android:textColor="@android:color/white" android:id="@+id/tv_transaction_status" android:background="@drawable/background_green_rounded_corner" android:paddingLeft="4dp" android:paddingTop="2dp" android:paddingRight="4dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Thành công" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout android:gravity="center" android:id="@+id/rl_do_action" android:paddingLeft="20dp" android:paddingRight="20dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:id="@+id/tv_see_detail" android:background="@drawable/pure_white_rectangle_rounded" android:paddingLeft="16dp" android:paddingTop="8dp" android:paddingRight="16dp" android:paddingBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Xem chi tiết" android:layout_centerVertical="true"/>
        <TextView android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tv_delete" android:background="@drawable/light_red_rectangle_rounded" android:paddingLeft="42dp" android:paddingTop="8dp" android:paddingRight="42dp" android:paddingBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="Xóa" android:layout_toRightOf="@+id/tv_see_detail" android:layout_centerVertical="true"/>
        <TextView android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tv_cancel" android:background="@drawable/light_brown_rectangle_rounded" android:paddingLeft="42dp" android:paddingTop="8dp" android:paddingRight="42dp" android:paddingBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="Hủy" android:layout_toRightOf="@+id/tv_see_detail" android:layout_centerVertical="true"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
